<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:fitsSystemWindows="true"
    tools:context=".activities.vendor.OrderDetailActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        android:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_color"
            app:title="Order Details"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_normal">

            <!-- Order Header Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal">

                    <!-- Order ID and Status -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_normal">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_order_id"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="#ORD001"
                                android:textSize="@dimen/text_size_large"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                tools:text="#ORD001" />

                            <TextView
                                android:id="@+id/tv_order_date"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Today, 10:30 AM"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/text_secondary"
                                tools:text="Today, 10:30 AM" />

                        </LinearLayout>

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_order_status"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Preparing"
                            android:textColor="@color/white"
                            app:chipBackgroundColor="@color/primary_color"
                            tools:text="Preparing" />

                    </LinearLayout>

                    <!-- Customer Info -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_normal">

                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_medium"
                            android:layout_marginEnd="@dimen/spacing_normal"
                            android:src="@drawable/ic_person"
                            app:tint="@color/primary_color"
                            android:contentDescription="Customer" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_customer_name"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="John Doe"
                                android:textSize="@dimen/text_size_normal"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary"
                                tools:text="John Doe" />

                            <TextView
                                android:id="@+id/tv_customer_phone"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="+91 9876543210"
                                android:textSize="@dimen/text_size_small"
                                android:textColor="@color/text_secondary"
                                tools:text="+91 9876543210" />

                        </LinearLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_call_customer"
                            style="@style/Widget.Material3.Button.IconButton"
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="Call Customer"
                            app:icon="@drawable/ic_call"
                            app:iconTint="@color/success_color" />

                    </LinearLayout>

                    <!-- Delivery Info -->
                    <LinearLayout
                        android:id="@+id/layout_delivery_info"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="@dimen/icon_size_medium"
                            android:layout_height="@dimen/icon_size_medium"
                            android:layout_marginEnd="@dimen/spacing_normal"
                            android:src="@drawable/ic_location_on"
                            app:tint="@color/error_color"
                            android:contentDescription="Delivery Address" />

                        <TextView
                            android:id="@+id/tv_delivery_address"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="123 Main Street, City, State - 123456"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/text_secondary"
                            tools:text="123 Main Street, City, State - 123456" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Order Items Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Order Items"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/spacing_normal" />

                    <!-- RecyclerView for Order Items -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_order_items"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:listitem="@layout/item_order_detail" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Customer Note Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_customer_note"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Customer Note"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <TextView
                        android:id="@+id/tv_customer_note"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Please make it less spicy"
                        android:textSize="@dimen/text_size_normal"
                        android:textColor="@color/text_secondary"
                        android:background="@drawable/rounded_background_light"
                        android:padding="@dimen/spacing_small"
                        tools:text="Please make it less spicy and add extra cheese" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Bill Summary Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Bill Summary"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/spacing_normal" />

                    <!-- Subtotal -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_small">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Subtotal"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tv_subtotal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹300"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/text_primary"
                            tools:text="₹300" />

                    </LinearLayout>

                    <!-- Delivery Fee -->
                    <LinearLayout
                        android:id="@+id/layout_delivery_fee"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:visibility="gone">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Delivery Fee"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tv_delivery_fee"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹30"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/text_primary"
                            tools:text="₹30" />

                    </LinearLayout>

                    <!-- Tax -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_small">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Tax (GST)"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/text_secondary" />

                        <TextView
                            android:id="@+id/tv_tax"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹20"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/text_primary"
                            tools:text="₹20" />

                    </LinearLayout>

                    <!-- Divider -->
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/gray_300"
                        android:layout_marginVertical="@dimen/spacing_small" />

                    <!-- Total -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Total Amount"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold"
                            android:textColor="@color/text_primary" />

                        <TextView
                            android:id="@+id/tv_total_amount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="₹350"
                            android:textSize="@dimen/text_size_medium"
                            android:textStyle="bold"
                            android:textColor="@color/success_color"
                            tools:text="₹350" />

                    </LinearLayout>

                    <!-- Payment Method -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginTop="@dimen/spacing_normal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Payment Method"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/text_secondary" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <ImageView
                                android:id="@+id/iv_payment_method"
                                android:layout_width="@dimen/icon_size_small"
                                android:layout_height="@dimen/icon_size_small"
                                android:layout_marginEnd="@dimen/spacing_tiny"
                                android:src="@drawable/ic_credit_card"
                                app:tint="@color/primary_color"
                                android:contentDescription="Payment Method" />

                            <TextView
                                android:id="@+id/tv_payment_method"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="UPI"
                                android:textSize="@dimen/text_size_normal"
                                android:textColor="@color/text_primary"
                                tools:text="UPI" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Prep Time Update Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_prep_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Update Preparation Time"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/spacing_normal" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_prep_time"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginEnd="@dimen/spacing_normal"
                            android:hint="Prep time (minutes)"
                            app:startIconDrawable="@drawable/ic_schedule">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_prep_time"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="number"
                                android:maxLines="1" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_update_prep_time"
                            style="@style/Widget.Material3.Button"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Update"
                            app:backgroundTint="@color/primary_color"
                            android:textColor="@color/white" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Bottom Action Buttons -->
    <LinearLayout
        android:id="@+id/layout_bottom_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_normal"
        android:background="@color/white"
        android:elevation="8dp">

        <!-- Accept Button (for pending orders) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_accept_order"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginEnd="@dimen/spacing_small"
            android:text="Accept Order"
            android:textColor="@color/success_color"
            app:strokeColor="@color/success_color"
            app:icon="@drawable/ic_check"
            app:iconTint="@color/success_color"
            android:visibility="gone" />

        <!-- Reject Button (for pending orders) -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_reject_order"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="@dimen/spacing_small"
            android:text="Reject Order"
            android:textColor="@color/error_color"
            app:strokeColor="@color/error_color"
            app:icon="@drawable/ic_close"
            app:iconTint="@color/error_color"
            android:visibility="gone" />

        <!-- Status Update Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_update_status"
            style="@style/Widget.Material3.Button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Start Preparing"
            app:backgroundTint="@color/primary_color"
            android:textColor="@color/white"
            android:visibility="gone" />

    </LinearLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
