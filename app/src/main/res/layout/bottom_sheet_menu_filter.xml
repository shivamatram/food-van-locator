<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_bottom_sheet"
    android:paddingTop="@dimen/spacing_normal">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="@dimen/spacing_normal"
        android:paddingBottom="@dimen/spacing_normal">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Filter &amp; Sort"
            android:textSize="@dimen/text_size_large"
            android:textStyle="bold"
            android:textColor="@color/text_primary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_clear_all"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Clear All"
            android:textColor="@color/primary_color"
            android:minWidth="0dp"
            android:paddingHorizontal="@dimen/spacing_small" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_close_filter"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:contentDescription="Close Filter"
            app:icon="@drawable/ic_close"
            app:iconTint="@color/text_secondary" />

    </LinearLayout>

    <!-- Content ScrollView -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:maxHeight="400dp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="@dimen/spacing_normal">

            <!-- Search Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_search_filter"
                style="@style/Widget.Material3.TextInputLayout.FilledBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:hint="Search by name, SKU, or description"
                app:startIconDrawable="@drawable/ic_search"
                app:endIconMode="clear_text"
                app:boxBackgroundColor="@color/gray_100">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_search_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:maxLines="1"
                    android:textSize="@dimen/text_size_medium" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Category Filter -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Category"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_categories"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="@dimen/spacing_small"
                        app:chipSpacingVertical="@dimen/spacing_tiny"
                        app:selectionRequired="false"
                        app:singleSelection="false">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_all_categories"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All"
                            android:checked="true"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:chipStrokeColor="@color/primary_color" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_snacks"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Snacks"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:chipStrokeColor="@color/primary_color" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_beverages"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Beverages"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:chipStrokeColor="@color/primary_color" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_main_course"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Main Course"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:chipStrokeColor="@color/primary_color" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_desserts"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Desserts"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:chipStrokeColor="@color/primary_color" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Availability Filter -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Availability"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_availability"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="@dimen/spacing_small"
                        app:selectionRequired="false"
                        app:singleSelection="false">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_available"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Available"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:chipStrokeColor="@color/success_color" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_out_of_stock"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Out of Stock"
                            app:chipBackgroundColor="@color/chip_background_selector"
                            app:chipStrokeColor="@color/error_color" />

                    </com.google.android.material.chip.ChipGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Price Range Filter -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Price Range"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_small">

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Min ₹">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_price_min"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:maxLines="1" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=" - "
                            android:textColor="@color/text_secondary"
                            android:layout_marginHorizontal="@dimen/spacing_small" />

                        <com.google.android.material.textfield.TextInputLayout
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox.Dense"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Max ₹">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_price_max"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="numberDecimal"
                                android:maxLines="1" />

                        </com.google.android.material.textfield.TextInputLayout>

                    </LinearLayout>

                    <com.google.android.material.slider.RangeSlider
                        android:id="@+id/slider_price_range"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0"
                        android:valueTo="1000"
                        app:values="@array/price_range_default"
                        app:thumbColor="@color/primary_color"
                        app:trackColorActive="@color/primary_color"
                        app:trackColorInactive="@color/gray_300" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Sort Options -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Sort By"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <RadioGroup
                        android:id="@+id/radio_group_sort"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radio_sort_newest"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Newest"
                            android:checked="true"
                            android:buttonTint="@color/primary_color" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radio_sort_popularity"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Popularity"
                            android:buttonTint="@color/primary_color" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radio_sort_price_low"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Price: Low → High"
                            android:buttonTint="@color/primary_color" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radio_sort_price_high"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Price: High → Low"
                            android:buttonTint="@color/primary_color" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radio_sort_name_az"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Name A → Z"
                            android:buttonTint="@color/primary_color" />

                        <com.google.android.material.radiobutton.MaterialRadioButton
                            android:id="@+id/radio_sort_name_za"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="Name Z → A"
                            android:buttonTint="@color/primary_color" />

                    </RadioGroup>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Filter Preview -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_filter_preview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:cardBackgroundColor="@color/primary_color_light"
                app:strokeColor="@color/primary_color"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal">

                    <TextView
                        android:id="@+id/tv_filter_results_count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Showing 0 items"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:textColor="@color/primary_color"
                        android:layout_marginBottom="@dimen/spacing_tiny" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rv_filter_preview"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        tools:listitem="@layout/item_filter_preview" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Action Buttons -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_normal"
        android:background="@color/white"
        android:elevation="4dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_reset_filter"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Reset"
            android:textColor="@color/text_secondary"
            android:layout_marginEnd="@dimen/spacing_small" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_save_preset"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Save Preset"
            android:textColor="@color/primary_color"
            app:strokeColor="@color/primary_color"
            android:layout_marginEnd="@dimen/spacing_small" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_apply_filter"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Apply"
            android:textColor="@color/white"
            app:backgroundTint="@color/primary_color" />

    </LinearLayout>

</LinearLayout>
