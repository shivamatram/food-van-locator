<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="center">

        <!-- Logo Section -->
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="32dp"
            android:src="@drawable/ic_food_van_logo"
            android:contentDescription="Food Van Logo" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verify Phone Number"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:layout_marginBottom="8dp" />

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter the OTP sent to +91 XXXXXXXXXX"
            android:textSize="16sp"
            android:textColor="@color/white_80"
            android:layout_marginBottom="32dp"
            android:gravity="center" />

        <!-- OTP Form -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardElevation="8dp"
            android:layout_marginBottom="24dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- OTP Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/primary_color">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_otp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="Enter 6-digit OTP"
                        android:inputType="number"
                        android:maxLength="6"
                        android:gravity="center"
                        android:textSize="18sp"
                        android:letterSpacing="0.5" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Timer -->
                <TextView
                    android:id="@+id/tv_timer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Resend OTP in 00:30"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Verify Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_verify_otp"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="VERIFY OTP"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@color/primary_color"
                    app:cornerRadius="28dp"
                    android:layout_marginBottom="16dp" />

                <!-- Resend Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_resend_otp"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:text="RESEND OTP"
                    android:textSize="14sp"
                    android:textColor="@color/primary_color"
                    app:backgroundTint="@android:color/transparent"
                    app:strokeColor="@color/primary_color"
                    app:strokeWidth="1dp"
                    app:cornerRadius="28dp"
                    android:enabled="false" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Progress Bar -->
        <ProgressBar
            android:id="@+id/progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone"
            android:layout_marginBottom="16dp" />

        <!-- Back to Login -->
        <TextView
            android:id="@+id/tv_back_to_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="â† Back to Login"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:background="?attr/selectableItemBackground"
            android:padding="8dp" />

    </LinearLayout>

</ScrollView>
