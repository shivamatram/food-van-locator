<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    android:fitsSystemWindows="true"
    tools:context=".activities.customer.FavoriteOrdersActivity">

    <!-- App Bar Layout with Material Design 3 -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary"
        android:elevation="4dp"
        android:fitsSystemWindows="true"
        app:elevation="4dp"
        app:liftOnScroll="true">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/primary"
            app:expandedTitleGravity="start|bottom"
            app:expandedTitleMarginBottom="32dp"
            app:expandedTitleMarginStart="24dp"
            app:expandedTitleTextAppearance="@style/TextAppearance.Material3.HeadlineMedium"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:statusBarScrim="@color/primary_dark"
            app:title="Favorite Orders"
            app:titleCollapseMode="scale">

            <!-- Header Background with Gradient -->
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                android:src="@drawable/gradient_primary_background"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7" />

            <!-- Favorite Icon Overlay -->
            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_gravity="center"
                android:alpha="0.3"
                android:src="@drawable/ic_favorite_filled"
                android:tint="@color/white"
                app:layout_collapseMode="parallax" />

            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:navigationIconTint="@color/white"
                app:titleTextColor="@color/white" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content with SwipeRefreshLayout -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Search and Filter Section -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_search_filter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:animateLayoutChanges="true"
                    app:cardBackgroundColor="@color/surface"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!-- Search Bar -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/til_search"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:hint="Search your favorite orders..."
                            app:boxCornerRadiusBottomEnd="12dp"
                            app:boxCornerRadiusBottomStart="12dp"
                            app:boxCornerRadiusTopEnd="12dp"
                            app:boxCornerRadiusTopStart="12dp"
                            app:boxStrokeColor="@color/primary"
                            app:endIconMode="clear_text"
                            app:hintTextColor="@color/primary"
                            app:startIconDrawable="@drawable/ic_search"
                            app:startIconTint="@color/text_hint">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_search"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:maxLines="1"
                                android:textColor="@color/on_surface"
                                android:textSize="16sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Filter Chips -->
                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chip_group_filter"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:chipSpacing="8dp"
                            app:singleSelection="false">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_all"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="All Favorites"
                                app:chipIcon="@drawable/ic_favorite_filled"
                                app:chipIconTint="@color/primary" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_food"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Food Items"
                                app:chipIcon="@drawable/ic_fastfood"
                                app:chipIconTint="@color/secondary_color" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_vendors"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vendors"
                                app:chipIcon="@drawable/ic_store"
                                app:chipIconTint="@color/accent_color" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_recent"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Recently Added"
                                app:chipIcon="@drawable/ic_history"
                                app:chipIconTint="@color/info_color" />

                        </com.google.android.material.chip.ChipGroup>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Progress Indicator -->
                <com.google.android.material.progressindicator.CircularProgressIndicator
                    android:id="@+id/progress_indicator"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginVertical="32dp"
                    android:visibility="gone"
                    app:indicatorColor="@color/primary"
                    app:trackColor="@color/divider_light" />

                <!-- Empty State Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_empty_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:animateLayoutChanges="true"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/surface"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="4dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="48dp">

                        <!-- Empty State Icon Container -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_marginBottom="32dp"
                            app:cardBackgroundColor="@color/primary_container"
                            app:cardCornerRadius="70dp"
                            app:cardElevation="8dp"
                            app:strokeWidth="0dp">

                            <ImageView
                                android:id="@+id/iv_empty_icon"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:scaleType="centerInside"
                                android:src="@drawable/ic_favorite_border"
                                android:tint="@color/primary" />

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Empty State Title -->
                        <TextView
                            android:id="@+id/tv_empty_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:fontFamily="@font/roboto_bold"
                            android:letterSpacing="0.01"
                            android:text="No Favorites Yet"
                            android:textColor="@color/on_surface"
                            android:textSize="28sp"
                            android:textStyle="bold" />

                        <!-- Empty State Message -->
                        <TextView
                            android:id="@+id/tv_empty_message"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_marginBottom="40dp"
                            android:fontFamily="@font/roboto_regular"
                            android:lineSpacingExtra="6dp"
                            android:maxWidth="320dp"
                            android:text="Start adding your favorite meals and vendors to see them here. Tap the heart icon on any item to add it to your favorites!"
                            android:textAlignment="center"
                            android:textColor="@color/on_surface_variant"
                            android:textSize="16sp" />

                        <!-- Start Exploring Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_start_exploring"
                            android:layout_width="wrap_content"
                            android:layout_height="60dp"
                            android:letterSpacing="0.02"
                            android:paddingHorizontal="40dp"
                            android:text="Start Exploring"
                            android:textColor="@color/on_primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            app:backgroundTint="@color/primary"
                            app:cornerRadius="30dp"
                            app:elevation="8dp"
                            app:icon="@drawable/ic_explore"
                            app:iconGravity="textStart"
                            app:iconSize="24dp"
                            app:iconTint="@color/on_primary"
                            app:rippleColor="@color/primary_variant"
                            style="@style/Widget.Material3.Button.UnelevatedButton" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Favorites Statistics Card -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_stats"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="@color/surface"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="20dp">

                        <!-- Total Favorites -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_total_favorites"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:text="0"
                                android:textColor="@color/primary"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Total Favorites"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="16dp"
                            android:background="@color/divider_light" />

                        <!-- Food Items -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_food_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:text="0"
                                android:textColor="@color/secondary_color"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Food Items"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="12sp" />

                        </LinearLayout>

                        <!-- Divider -->
                        <View
                            android:layout_width="1dp"
                            android:layout_height="40dp"
                            android:layout_marginHorizontal="16dp"
                            android:background="@color/divider_light" />

                        <!-- Vendors -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_vendor_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:text="0"
                                android:textColor="@color/accent_color"
                                android:textSize="24sp"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Vendors"
                                android:textColor="@color/on_surface_variant"
                                android:textSize="12sp" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Favorites RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_favorites"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:paddingBottom="16dp"
                    android:scrollbars="none"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    tools:itemCount="5"
                    tools:listitem="@layout/item_favorite_order" />

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Floating Action Button for Multi-Select -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_multi_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="Select Multiple"
        android:visibility="gone"
        app:backgroundTint="@color/secondary_color"
        app:icon="@drawable/ic_checklist"
        app:iconTint="@color/white"
        app:tint="@color/white" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
