<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Existing Account Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_existing_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="?attr/colorOutlineVariant"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_account_balance"
                        android:tint="@color/primary_color"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Bank Account Details"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/roboto_bold" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_verification_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verified"
                        android:textColor="@color/success_color"
                        app:chipBackgroundColor="@color/success_light"
                        app:chipIcon="@drawable/ic_verified"
                        app:chipIconTint="@color/success_color" />

                </LinearLayout>

                <!-- Account Details Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="20dp">

                    <!-- Bank Name -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Bank Name:"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:fontFamily="@font/roboto_medium" />

                        <TextView
                            android:id="@+id/tv_bank_name"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="State Bank of India"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:fontFamily="@font/roboto_bold" />

                    </LinearLayout>

                    <!-- Account Holder -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Account Holder:"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:fontFamily="@font/roboto_medium" />

                        <TextView
                            android:id="@+id/tv_account_holder"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="John Doe"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:fontFamily="@font/roboto_bold" />

                    </LinearLayout>

                    <!-- Account Number -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Account Number:"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:fontFamily="@font/roboto_medium" />

                        <TextView
                            android:id="@+id/tv_account_number"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="****1234"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:fontFamily="@font/roboto_bold" />

                    </LinearLayout>

                    <!-- IFSC Code -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="12dp">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="IFSC Code:"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:fontFamily="@font/roboto_medium" />

                        <TextView
                            android:id="@+id/tv_ifsc_code"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="SBIN0001234"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:fontFamily="@font/roboto_bold" />

                    </LinearLayout>

                    <!-- Account Type -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:text="Account Type:"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:fontFamily="@font/roboto_medium" />

                        <TextView
                            android:id="@+id/tv_account_type"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Savings"
                            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:fontFamily="@font/roboto_bold" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_verify_account"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:text="Verify Account"
                        android:textColor="@color/primary_color"
                        app:strokeColor="@color/primary_color"
                        app:iconTint="@color/primary_color"
                        app:icon="@drawable/ic_verified" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit Details"
                        android:backgroundTint="@color/primary_color"
                        android:textColor="@android:color/white"
                        app:iconTint="@android:color/white"
                        app:icon="@drawable/ic_edit" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Add/Edit Account Form -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_add_account"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="?attr/colorOutlineVariant"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_add"
                        android:tint="@color/primary_color"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Add Bank Account"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/roboto_bold" />

                </LinearLayout>

                <!-- Account Holder Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_account_holder"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Account Holder Name"
                    app:startIconDrawable="@drawable/ic_person"
                    app:startIconTint="@color/primary_color"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/primary_color"
                    app:helperText="Name as per bank records">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_account_holder"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Account Number -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_account_number"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Account Number"
                    app:startIconDrawable="@drawable/ic_account_balance"
                    app:startIconTint="@color/primary_color"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/primary_color"
                    app:helperText="Bank account number">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_account_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Confirm Account Number -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_confirm_account"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="Confirm Account Number"
                    app:startIconDrawable="@drawable/ic_check_circle"
                    app:startIconTint="@color/primary_color"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/primary_color"
                    app:helperText="Re-enter account number">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_confirm_account"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- IFSC Code -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_ifsc_code"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:hint="IFSC Code"
                    app:startIconDrawable="@drawable/ic_code"
                    app:startIconTint="@color/primary_color"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/primary_color"
                    app:helperText="Bank IFSC code">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_ifsc_code"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapCharacters"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Bank Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_bank_name"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="Bank Name"
                    app:startIconDrawable="@drawable/ic_business"
                    app:startIconTint="@color/primary_color"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/primary_color">

                    <AutoCompleteTextView
                        android:id="@+id/et_bank_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="none" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Account Type -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Account Type"
                    android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                    android:textColor="?attr/colorOnSurface"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginBottom="12dp" />

                <RadioGroup
                    android:id="@+id/rg_account_type"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="24dp">

                    <RadioButton
                        android:id="@+id/rb_savings"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Savings"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:buttonTint="@color/primary_color"
                        android:checked="true" />

                    <RadioButton
                        android:id="@+id/rb_current"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Current"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:buttonTint="@color/primary_color" />

                </RadioGroup>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_account"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:text="Cancel"
                        android:textColor="@color/primary_color"
                        app:strokeColor="@color/primary_color"
                        android:visibility="gone" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_save_account"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save Account"
                        android:backgroundTint="@color/primary_color"
                        android:textColor="@android:color/white"
                        app:iconTint="@android:color/white"
                        app:icon="@drawable/ic_save" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
