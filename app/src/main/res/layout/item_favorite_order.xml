<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/card_favorite_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="4dp"
    android:layout_marginVertical="6dp"
    android:animateLayoutChanges="true"
    android:clickable="true"
    android:focusable="true"
    app:cardBackgroundColor="@color/surface"
    app:cardCornerRadius="16dp"
    app:cardElevation="4dp"
    app:rippleColor="@color/ripple_color"
    app:strokeWidth="0dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Selection Checkbox (Hidden by default) -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/checkbox_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:visibility="gone"
            app:buttonTint="@color/primary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <!-- Item Image Container -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_image"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginEnd="16dp"
            app:cardCornerRadius="12dp"
            app:cardElevation="2dp"
            app:strokeWidth="0dp"
            app:layout_constraintStart_toEndOf="@id/checkbox_select"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_item_image"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerCrop"
                tools:src="@drawable/placeholder_food_item" />

            <!-- Vendor Type Badge -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_type_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top|end"
                android:layout_margin="4dp"
                app:cardBackgroundColor="@color/primary"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <TextView
                    android:id="@+id/tv_type_badge"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:text="FOOD"
                    android:textColor="@color/white"
                    android:textSize="8sp"
                    android:textStyle="bold" />

            </com.google.android.material.card.MaterialCardView>

        </com.google.android.material.card.MaterialCardView>

        <!-- Item Name -->
        <TextView
            android:id="@+id/tv_item_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginEnd="8dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_bold"
            android:maxLines="2"
            android:textColor="@color/on_surface"
            android:textSize="16sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toStartOf="@id/btn_favorite"
            app:layout_constraintStart_toEndOf="@id/card_image"
            app:layout_constraintTop_toTopOf="@id/card_image"
            tools:text="Delicious Chicken Burger" />

        <!-- Vendor Name -->
        <TextView
            android:id="@+id/tv_vendor_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:layout_marginEnd="8dp"
            android:drawablePadding="4dp"
            android:ellipsize="end"
            android:fontFamily="@font/roboto_regular"
            android:maxLines="1"
            android:textColor="@color/on_surface_variant"
            android:textSize="14sp"
            app:drawableStartCompat="@drawable/ic_store"
            app:drawableTint="@color/text_hint"
            app:layout_constraintEnd_toStartOf="@id/btn_favorite"
            app:layout_constraintStart_toEndOf="@id/card_image"
            app:layout_constraintTop_toBottomOf="@id/tv_item_name"
            tools:text="Burger Palace" />

        <!-- Rating and Reviews -->
        <LinearLayout
            android:id="@+id/layout_rating"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintStart_toEndOf="@id/card_image"
            app:layout_constraintTop_toBottomOf="@id/tv_vendor_name">

            <ImageView
                android:layout_width="12dp"
                android:layout_height="12dp"
                android:layout_marginEnd="4dp"
                android:src="@drawable/ic_star_filled"
                android:tint="@color/rating_star" />

            <TextView
                android:id="@+id/tv_rating"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/on_surface"
                android:textSize="12sp"
                android:textStyle="bold"
                tools:text="4.5" />

            <TextView
                android:id="@+id/tv_reviews_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/on_surface_variant"
                android:textSize="12sp"
                tools:text="(120 reviews)" />

        </LinearLayout>

        <!-- Price -->
        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_price_tag"
            android:fontFamily="@font/roboto_bold"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:textColor="@color/primary"
            android:textSize="14sp"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@id/card_image"
            app:layout_constraintTop_toBottomOf="@id/layout_rating"
            tools:text="â‚¹249" />

        <!-- Added Date -->
        <TextView
            android:id="@+id/tv_added_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:drawablePadding="4dp"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/text_hint"
            android:textSize="10sp"
            app:drawableStartCompat="@drawable/ic_schedule"
            app:drawableTint="@color/text_hint"
            app:layout_constraintStart_toEndOf="@id/tv_price"
            app:layout_constraintTop_toTopOf="@id/tv_price"
            tools:text="Added 2 days ago" />

        <!-- Favorite Heart Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_favorite"
            style="@style/Widget.Material3.Button.IconButton"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:insetLeft="0dp"
            android:insetTop="0dp"
            android:insetRight="0dp"
            android:insetBottom="0dp"
            app:backgroundTint="@android:color/transparent"
            app:icon="@drawable/ic_favorite_filled"
            app:iconGravity="textStart"
            app:iconSize="24dp"
            app:iconTint="@color/error_color"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:rippleColor="@color/error_color"
            app:strokeWidth="0dp" />

        <!-- Action Buttons Container -->
        <LinearLayout
            android:id="@+id/layout_actions"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/card_image"
            app:layout_constraintTop_toBottomOf="@id/tv_price">

            <!-- View Details Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_view_details"
                style="@style/Widget.Material3.Button.OutlinedButton"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:text="View Details"
                android:textColor="@color/primary"
                android:textSize="12sp"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_visibility"
                app:iconGravity="textStart"
                app:iconSize="16dp"
                app:iconTint="@color/primary"
                app:strokeColor="@color/primary"
                app:strokeWidth="1dp" />

            <!-- Reorder Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_reorder"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_weight="1"
                android:text="Reorder"
                android:textColor="@color/on_primary"
                android:textSize="12sp"
                app:backgroundTint="@color/primary"
                app:cornerRadius="20dp"
                app:icon="@drawable/ic_add_shopping_cart"
                app:iconGravity="textStart"
                app:iconSize="16dp"
                app:iconTint="@color/on_primary"
                style="@style/Widget.Material3.Button.UnelevatedButton" />

        </LinearLayout>

        <!-- Availability Status -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:visibility="gone"
            app:cardBackgroundColor="@color/success_light"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:strokeWidth="0dp"
            app:layout_constraintStart_toEndOf="@id/card_image"
            app:layout_constraintTop_toBottomOf="@id/layout_actions">

            <TextView
                android:id="@+id/tv_availability"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawablePadding="4dp"
                android:fontFamily="@font/roboto_medium"
                android:paddingHorizontal="8dp"
                android:paddingVertical="4dp"
                android:text="Available Now"
                android:textColor="@color/success_color"
                android:textSize="10sp"
                android:textStyle="bold"
                app:drawableStartCompat="@drawable/ic_check_circle"
                app:drawableTint="@color/success_color" />

        </com.google.android.material.card.MaterialCardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
