<?xml version="1.0" encoding="utf-8"?>
<LinearLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary"
    tools:context=".activities.vendor.ManageMenuActivity">

    <!-- Status Bar Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/primary_color" />

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:elevation="@dimen/toolbar_elevation"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/white"
        app:title="Manage Menu"
        app:titleTextColor="@color/white" />

    <!-- Main Content -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh_layout"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/activity_content_padding">

                <!-- Search and Filter Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/activity_section_spacing"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:cardBackgroundColor="@color/surface_container_lowest">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Search &amp; Filter"
                            android:textColor="@color/text_primary"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                        <!-- Search Bar -->
                        <com.google.android.material.textfield.TextInputLayout
                            android:id="@+id/search_layout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            android:hint="Search menu items"
                            app:startIconDrawable="@drawable/ic_search"
                            app:startIconTint="@color/primary_color"
                            app:hintTextColor="@color/text_secondary"
                            app:boxStrokeColor="@color/primary_color"
                            app:boxCornerRadiusTopStart="8dp"
                            app:boxCornerRadiusTopEnd="8dp"
                            app:boxCornerRadiusBottomStart="8dp"
                            app:boxCornerRadiusBottomEnd="8dp"
                            app:endIconMode="clear_text">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/search_edit_text"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:inputType="text"
                                android:textColor="@color/text_primary"
                                android:textSize="16sp" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <!-- Bulk Actions Bar (Initially Hidden) -->
                        <LinearLayout
                            android:id="@+id/bulk_actions_bar"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="12dp"
                            android:background="@color/primary_color_alpha"
                            android:visibility="gone"
                            android:layout_marginBottom="16dp">

                            <TextView
                                android:id="@+id/selected_count_text"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="0 items selected"
                                android:textColor="@color/primary_color"
                                android:textStyle="bold"
                                android:textSize="14sp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_bulk_delete"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:text="Delete"
                                android:textColor="@color/error_color"
                                android:layout_marginEnd="8dp"
                                app:strokeColor="@color/error_color"
                                app:icon="@drawable/ic_delete"
                                app:iconTint="@color/error_color"
                                app:cornerRadius="18dp" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_bulk_toggle_availability"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:text="Toggle"
                                android:textColor="@color/primary_color"
                                app:strokeColor="@color/primary_color"
                                app:icon="@drawable/ic_visibility"
                                app:iconTint="@color/primary_color"
                                app:cornerRadius="18dp" />

                        </LinearLayout>

                        <!-- Category Filter Chips -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="8dp">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Filter by Category"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:textStyle="bold" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_select_mode"
                                style="@style/Widget.Material3.Button.TextButton"
                                android:layout_width="wrap_content"
                                android:layout_height="36dp"
                                android:text="Select"
                                android:textColor="@color/primary_color"
                                android:textSize="12sp"
                                app:icon="@drawable/ic_check_box"
                                app:iconTint="@color/primary_color"
                                app:iconSize="18dp" />

                        </LinearLayout>

                        <HorizontalScrollView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:scrollbars="none">

                            <com.google.android.material.chip.ChipGroup
                                android:id="@+id/category_chip_group"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:paddingHorizontal="4dp"
                                app:singleSelection="true"
                                app:selectionRequired="false"
                                app:chipSpacingHorizontal="8dp">

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chip_all_categories"
                                    style="@style/Widget.Material3.Chip.Filter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="All"
                                    android:checked="true"
                                    app:chipBackgroundColor="@color/chip_background_selector"
                                    app:chipStrokeColor="@color/primary_color"
                                    app:chipStrokeWidth="1dp" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chip_chinese"
                                    style="@style/Widget.Material3.Chip.Filter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Chinese"
                                    app:chipBackgroundColor="@color/chip_background_selector"
                                    app:chipStrokeColor="@color/primary_color"
                                    app:chipStrokeWidth="1dp" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chip_indian"
                                    style="@style/Widget.Material3.Chip.Filter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Indian"
                                    app:chipBackgroundColor="@color/chip_background_selector"
                                    app:chipStrokeColor="@color/primary_color"
                                    app:chipStrokeWidth="1dp" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chip_fast_food"
                                    style="@style/Widget.Material3.Chip.Filter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Fast Food"
                                    app:chipBackgroundColor="@color/chip_background_selector"
                                    app:chipStrokeColor="@color/primary_color"
                                    app:chipStrokeWidth="1dp" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chip_drinks"
                                    style="@style/Widget.Material3.Chip.Filter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Drinks"
                                    app:chipBackgroundColor="@color/chip_background_selector"
                                    app:chipStrokeColor="@color/primary_color"
                                    app:chipStrokeWidth="1dp" />

                                <com.google.android.material.chip.Chip
                                    android:id="@+id/chip_desserts"
                                    style="@style/Widget.Material3.Chip.Filter"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Desserts"
                                    app:chipBackgroundColor="@color/chip_background_selector"
                                    app:chipStrokeColor="@color/primary_color"
                                    app:chipStrokeWidth="1dp" />

                            </com.google.android.material.chip.ChipGroup>

                        </HorizontalScrollView>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Menu Items Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Menu Items"
                    android:textColor="@color/text_primary"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp" />

                <!-- Progress Indicator -->
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progress_indicator"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:visibility="gone"
                    app:indicatorColor="@color/primary_color"
                    app:trackColor="@color/surface_variant" />

                <!-- Menu Items RecyclerView -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/menu_items_recycler_view"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:nestedScrollingEnabled="false"
                    tools:listitem="@layout/item_manage_menu" />

                <!-- Empty State -->
                <LinearLayout
                    android:id="@+id/empty_state_layout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="48dp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <ImageView
                        android:layout_width="120dp"
                        android:layout_height="120dp"
                        android:layout_marginBottom="24dp"
                        android:src="@drawable/ic_restaurant_menu"
                        android:alpha="0.6"
                        app:tint="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="No Menu Items"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        android:layout_marginBottom="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start building your menu by adding your first food item"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:textAlignment="center"
                        android:layout_marginBottom="24dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/add_first_item_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Add First Item"
                        android:textColor="@color/white"
                        app:backgroundTint="@color/primary_color"
                        app:cornerRadius="8dp"
                        app:icon="@drawable/ic_add"
                        app:iconTint="@color/white" />

                </LinearLayout>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Floating Action Button -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_add_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="16dp"
        android:text="Add Item"
        android:textColor="@color/white"
        app:backgroundTint="@color/primary_color"
        app:icon="@drawable/ic_add"
        app:iconTint="@color/white" />

    <!-- Navigation Bar Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/background_primary" />

</LinearLayout>
