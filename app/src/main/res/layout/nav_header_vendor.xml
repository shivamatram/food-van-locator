<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/primary_color"
    android:fitsSystemWindows="false"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <!-- Status Bar Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/primary_color" />

    <!-- Navigation Header Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="223dp"
        android:background="@drawable/nav_header_background"
        android:clipToPadding="false"
        android:gravity="bottom"
        android:orientation="vertical"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingTop="16dp"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingBottom="@dimen/activity_vertical_margin">

        <com.google.android.material.imageview.ShapeableImageView
            android:id="@+id/iv_vendor_avatar"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="16dp"
            android:contentDescription="Vendor Avatar"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_account_circle"
            app:shapeAppearanceOverlay="@style/CircleImageView"
            app:strokeColor="@color/white"
            app:strokeWidth="2dp" />

        <TextView
            android:id="@+id/tv_vendor_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/nav_header_vertical_spacing"
            android:text="Vendor Name"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_vendor_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="vendor@foodvan.com"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textColor="@color/white_80"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:orientation="horizontal">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_vendor_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Online"
                android:textColor="@color/white"
                app:chipBackgroundColor="@color/success_color"
                app:chipIcon="@drawable/ic_circle"
                app:chipIconTint="@color/white"
                app:chipMinHeight="32dp" />

            <View
                android:layout_width="0dp"
                android:layout_height="1dp"
                android:layout_weight="1" />

            <ImageButton
                android:id="@+id/btn_nav_settings"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="Settings"
                android:src="@drawable/ic_settings"
                app:tint="@color/white_80" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>
