<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bottom_sheet_background"
    android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp">

            <!-- Bottom Sheet Handle -->
            <View
                android:id="@+id/bottom_sheet_handle"
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="12dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bottom_sheet_handle" />

            <!-- Header Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="24dp"
                android:paddingBottom="16dp"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_filter_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Filter &amp; Sort"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:fontFamily="@font/roboto_bold" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_reset_filters"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Reset"
                    android:textColor="@color/primary_red"
                    android:textSize="14sp"
                    app:icon="@drawable/ic_refresh"
                    app:iconTint="@color/primary_red"
                    app:iconSize="18dp" />

            </LinearLayout>

            <!-- Active Filters Chips -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_active_filters"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="24dp"
                android:layout_marginBottom="16dp"
                android:visibility="gone"
                app:chipSpacing="8dp"
                app:singleLine="false" />

            <!-- Filter Content -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingHorizontal="24dp">

                <!-- Cuisine Type Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_restaurant"
                                app:tint="@color/primary_red"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Cuisine Type"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_expand_cuisine"
                                style="@style/Widget.Material3.Button.IconButton"
                                android:layout_width="40dp"
                                android:layout_height="40dp"
                                app:icon="@drawable/ic_expand_more"
                                app:iconTint="@color/text_secondary"
                                app:iconSize="20dp" />

                        </LinearLayout>

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chip_group_cuisine"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:chipSpacing="8dp"
                            app:singleLine="false"
                            app:selectionRequired="false" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Price Range Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_money"
                                app:tint="@color/primary_red"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Price Range"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />

                        </LinearLayout>

                        <!-- Price Range Chips -->
                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chip_group_price_range"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            app:chipSpacing="8dp"
                            app:singleSelection="true"
                            app:selectionRequired="false" />

                        <!-- Custom Price Range Slider -->
                        <LinearLayout
                            android:id="@+id/layout_custom_price"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:visibility="gone">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Custom Price Range"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary"
                                android:layout_marginBottom="8dp" />

                            <com.google.android.material.slider.RangeSlider
                                android:id="@+id/slider_price_range"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:valueFrom="0"
                                android:valueTo="1000"
                                app:values="@array/default_price_range"
                                app:thumbColor="@color/primary_red"
                                app:trackColorActive="@color/primary_red"
                                app:trackColorInactive="@color/gray_light" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="center_vertical">

                                <TextView
                                    android:id="@+id/tv_min_price"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="₹0"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />

                                <TextView
                                    android:id="@+id/tv_max_price"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:text="₹1000"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary"
                                    android:gravity="end" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Rating Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_star"
                                app:tint="@color/rating_yellow"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Minimum Rating"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />

                        </LinearLayout>

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chip_group_rating"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:chipSpacing="8dp"
                            app:singleSelection="true"
                            app:selectionRequired="false" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Distance Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_location"
                                app:tint="@color/primary_red"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Distance"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />

                            <TextView
                                android:id="@+id/tv_distance_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5 km"
                                android:textSize="14sp"
                                android:textColor="@color/primary_red"
                                android:textStyle="bold" />

                        </LinearLayout>

                        <com.google.android.material.slider.Slider
                            android:id="@+id/slider_distance"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:valueFrom="1"
                            android:valueTo="20"
                            android:value="5"
                            android:stepSize="1"
                            app:thumbColor="@color/primary_red"
                            app:trackColorActive="@color/primary_red"
                            app:trackColorInactive="@color/gray_light" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="1 km"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="20 km"
                                android:textSize="12sp"
                                android:textColor="@color/text_secondary"
                                android:gravity="end" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Availability & Service Type Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_settings"
                                app:tint="@color/primary_red"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Availability &amp; Service"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />

                        </LinearLayout>

                        <!-- Open Now Switch -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Open Now"
                                    android:textSize="16sp"
                                    android:textColor="@color/text_primary" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Show only currently open vans"
                                    android:textSize="12sp"
                                    android:textColor="@color/text_secondary" />

                            </LinearLayout>

                            <com.google.android.material.switchmaterial.SwitchMaterial
                                android:id="@+id/switch_open_now"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:thumbTint="@color/white"
                                app:trackTint="@color/switch_track_selector" />

                        </LinearLayout>

                        <!-- Service Type -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Service Type"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary"
                            android:layout_marginBottom="8dp" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chip_group_service_type"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:chipSpacing="8dp"
                            app:singleSelection="true"
                            app:selectionRequired="false" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Sort Section -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    app:strokeWidth="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="12dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_sort"
                                app:tint="@color/primary_red"
                                android:layout_marginEnd="12dp" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Sort By"
                                android:textSize="18sp"
                                android:textStyle="bold"
                                android:textColor="@color/text_primary" />

                        </LinearLayout>

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chip_group_sort_by"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            app:chipSpacing="8dp"
                            app:singleSelection="true"
                            app:selectionRequired="true" />

                        <!-- Sort Order -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="Sort Order"
                                android:textSize="14sp"
                                android:textColor="@color/text_secondary" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_sort_order"
                                style="@style/Widget.Material3.Button.OutlinedButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="⬆️ Low to High"
                                android:textSize="12sp"
                                app:strokeColor="@color/primary_red"
                                app:strokeWidth="1dp" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="24dp"
                android:background="@color/white"
                android:elevation="8dp">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_clear_filters"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="12dp"
                    android:text="Clear All"
                    android:textSize="16sp"
                    app:strokeColor="@color/primary_red"
                    app:strokeWidth="2dp"
                    app:cornerRadius="12dp" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_apply_filters"
                    android:layout_width="0dp"
                    android:layout_height="56dp"
                    android:layout_weight="2"
                    android:layout_marginStart="12dp"
                    android:text="Apply Filters"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/primary_red"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_check"
                    app:iconTint="@color/white" />

            </LinearLayout>

        </LinearLayout>

</androidx.core.widget.NestedScrollView>
