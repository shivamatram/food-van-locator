<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="?attr/colorSurfaceContainer"
    app:cardCornerRadius="12dp"
    app:cardElevation="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Location Icon -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="12dp"
            app:cardBackgroundColor="?attr/colorSurfaceVariant"
            app:cardCornerRadius="20dp"
            app:cardElevation="0dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_location_on"
                android:tint="@color/primary_color" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Location Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Date and Time -->
            <TextView
                android:id="@+id/tv_date_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nov 10, 2025 at 02:30 PM"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/roboto_bold"
                android:layout_marginBottom="4dp"
                tools:text="Nov 10, 2025 at 02:30 PM" />

            <!-- Address -->
            <TextView
                android:id="@+id/tv_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="MG Road, Sitabuldi, Nagpur, Maharashtra"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:layout_marginBottom="6dp"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="MG Road, Sitabuldi, Nagpur, Maharashtra" />

            <!-- Coordinates -->
            <TextView
                android:id="@+id/tv_coordinates"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lat: 21.1458, Lng: 79.0882"
                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/roboto_mono"
                tools:text="Lat: 21.1458, Lng: 79.0882" />

        </LinearLayout>

        <!-- Action Menu -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Status Indicator -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_status"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Active"
                android:textColor="@color/success_color"
                android:textSize="10sp"
                app:chipBackgroundColor="@color/success_light"
                app:chipIcon="@drawable/ic_check_circle"
                app:chipIconTint="@color/success_color"
                app:chipMinHeight="24dp"
                android:layout_marginBottom="8dp"
                tools:text="Active" />

            <!-- More Options -->
            <ImageView
                android:id="@+id/iv_more_options"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_more_vert"
                android:tint="?attr/colorOnSurfaceVariant"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
