<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:gravity="center_vertical"
    android:padding="@dimen/spacing_small"
    android:layout_marginBottom="@dimen/spacing_small">

    <!-- Item Image -->
    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/iv_item_image"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginEnd="@dimen/spacing_normal"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_fastfood"
        app:shapeAppearanceOverlay="@style/RoundedCornerImageView"
        android:contentDescription="Item Image" />

    <!-- Item Details -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">

        <!-- Item Name and Quantity -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="@dimen/spacing_tiny">

            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Veg Burger"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:maxLines="1"
                android:ellipsize="end"
                tools:text="Veg Burger" />

            <TextView
                android:id="@+id/tv_quantity"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2x"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"
                android:textColor="@color/primary_color"
                android:background="@drawable/circle_background_primary"
                android:padding="@dimen/spacing_tiny"
                android:minWidth="32dp"
                android:gravity="center"
                tools:text="2x" />

        </LinearLayout>

        <!-- Item Customizations -->
        <TextView
            android:id="@+id/tv_customizations"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Extra cheese, No onions"
            android:textSize="@dimen/text_size_small"
            android:textColor="@color/text_secondary"
            android:layout_marginBottom="@dimen/spacing_tiny"
            android:visibility="gone"
            tools:text="Extra cheese, No onions"
            tools:visibility="visible" />

        <!-- Item Price -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/tv_unit_price"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="₹120 each"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/text_secondary"
                tools:text="₹120 each" />

            <TextView
                android:id="@+id/tv_total_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="₹240"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold"
                android:textColor="@color/success_color"
                tools:text="₹240" />

        </LinearLayout>

    </LinearLayout>

    <!-- Dietary Indicators -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="@dimen/spacing_small">

        <ImageView
            android:id="@+id/iv_veg_indicator"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/ic_veg_indicator"
            android:visibility="gone"
            android:contentDescription="Vegetarian"
            tools:visibility="visible" />

        <ImageView
            android:id="@+id/iv_spicy_indicator"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:src="@drawable/ic_spicy_indicator"
            android:visibility="gone"
            android:contentDescription="Spicy"
            tools:visibility="visible" />

    </LinearLayout>

</LinearLayout>
