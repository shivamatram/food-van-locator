<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="16dp"
    android:layout_marginVertical="4dp"
    app:cardBackgroundColor="?attr/colorSurfaceContainerLowest"
    app:cardCornerRadius="16dp"
    app:cardElevation="0dp"
    app:strokeColor="?attr/colorOutlineVariant"
    app:strokeWidth="1dp">

    <LinearLayout
        android:id="@+id/layout_setting_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/selectableItemBackground"
        android:clickable="true"
        android:focusable="true"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="16dp"
        android:minHeight="64dp">

        <!-- Setting Icon -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_icon_container"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="16dp"
            app:cardBackgroundColor="?attr/colorPrimaryContainer"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/iv_setting_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:contentDescription="@string/settings"
                android:src="@drawable/ic_settings"
                app:tint="?attr/colorOnPrimaryContainer"
                tools:src="@drawable/ic_settings" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Setting Content -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Setting Title -->
            <TextView
                android:id="@+id/tv_setting_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/roboto_medium"
                android:text="Setting Title"
                android:textColor="?attr/colorOnSurface"
                android:textSize="16sp"
                android:textStyle="bold"
                android:letterSpacing="0.01"
                tools:text="Notifications" />

            <!-- Setting Description -->
            <TextView
                android:id="@+id/tv_setting_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:fontFamily="@font/roboto_regular"
                android:text="Setting description"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:textSize="14sp"
                android:lineSpacingExtra="2dp"
                android:visibility="visible"
                tools:text="Manage your notification preferences" />

            <!-- Setting Value/Status -->
            <TextView
                android:id="@+id/tv_setting_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:fontFamily="@font/roboto_medium"
                android:text="Setting value"
                android:textColor="?attr/colorPrimary"
                android:textSize="12sp"
                android:visibility="gone"
                tools:text="Enabled"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Action Area -->
        <LinearLayout
            android:id="@+id/layout_action_area"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <!-- Toggle Switch (for boolean settings) -->
            <com.google.android.material.switchmaterial.SwitchMaterial
                android:id="@+id/switch_setting"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                tools:checked="true"
                tools:visibility="visible" />

            <!-- Badge/Count (for items with counts) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_badge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                app:cardBackgroundColor="?attr/colorSecondaryContainer"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                tools:visibility="visible">

                <TextView
                    android:id="@+id/tv_badge_count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:minWidth="24dp"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="4dp"
                    android:text="3"
                    android:textAlignment="center"
                    android:textColor="?attr/colorOnSecondaryContainer"
                    android:textSize="12sp"
                    tools:text="5" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Navigation Arrow -->
            <ImageView
                android:id="@+id/iv_navigation_arrow"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:contentDescription="@string/navigate_next"
                android:src="@drawable/ic_chevron_right"
                app:tint="?attr/colorOnSurfaceVariant"
                android:visibility="visible"
                tools:visibility="visible" />

        </LinearLayout>

    </LinearLayout>

    <!-- Divider (optional, can be shown/hidden) -->
    <View
        android:id="@+id/divider_bottom"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="16dp"
        android:background="?attr/colorOutlineVariant"
        android:visibility="gone" />

</com.google.android.material.card.MaterialCardView>
