<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".activities.customer.CustomerMapActivity">

    <!-- Map Fragment Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Google Map Fragment -->
        <fragment
            android:id="@+id/map_fragment"
            android:name="com.google.android.gms.maps.SupportMapFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <!-- Top Overlay Controls -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="16dp"
            android:gravity="center_vertical">

            <!-- Back Button -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="48dp"
                android:layout_height="48dp"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white"
                android:layout_marginEnd="16dp">

                <ImageButton
                    android:id="@+id/btn_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_back"
                    android:background="?attr/selectableItemBackgroundBorderless"
                    android:contentDescription="Back"
                    app:tint="@color/text_primary" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Search Bar -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="0dp"
                android:layout_height="48dp"
                android:layout_weight="1"
                app:cardCornerRadius="24dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingStart="16dp"
                    android:paddingEnd="16dp">

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_search"
                        app:tint="@color/text_secondary"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Search for food vans..."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:gravity="center_vertical" />

                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_filter"
                        app:tint="@color/primary_color" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

        <!-- Right Side Controls -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_gravity="end|center_vertical"
            android:layout_marginEnd="16dp"
            android:layout_marginTop="80dp">

            <!-- Filter Button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_filter"
                app:backgroundTint="@color/white"
                app:tint="@color/text_primary"
                app:elevation="4dp"
                app:fabSize="mini"
                android:contentDescription="Filter food vans" />

            <!-- Map Style Toggle -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_map_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:src="@drawable/ic_dark_mode"
                app:backgroundTint="@color/white"
                app:tint="@color/text_primary"
                app:elevation="4dp"
                app:fabSize="mini"
                android:contentDescription="Toggle map style" />

            <!-- My Location Button -->
            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/fab_my_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_my_location"
                app:backgroundTint="@color/primary_color"
                app:tint="@color/white"
                app:elevation="4dp"
                app:fabSize="normal"
                android:contentDescription="My location" />

        </LinearLayout>

        <!-- Quick Filters Horizontal ScrollView -->
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="200dp"
            android:scrollbars="none"
            android:paddingStart="16dp"
            android:paddingEnd="16dp">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- All Filter Chip -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_all"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="All"
                    android:textColor="@color/white"
                    app:chipBackgroundColor="@color/primary_color"
                    app:chipCornerRadius="20dp"
                    android:layout_marginEnd="8dp"
                    app:chipIcon="@drawable/ic_restaurant"
                    app:chipIconTint="@color/white" />

                <!-- Fast Food Filter -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_fast_food"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fast Food"
                    android:textColor="@color/text_primary"
                    app:chipBackgroundColor="@color/white"
                    app:chipCornerRadius="20dp"
                    android:layout_marginEnd="8dp"
                    app:chipIcon="@drawable/ic_fastfood"
                    app:chipIconTint="@color/primary_color" />

                <!-- Beverages Filter -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_beverages"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beverages"
                    android:textColor="@color/text_primary"
                    app:chipBackgroundColor="@color/white"
                    app:chipCornerRadius="20dp"
                    android:layout_marginEnd="8dp"
                    app:chipIcon="@drawable/ic_local_drink"
                    app:chipIconTint="@color/primary_color" />

                <!-- Desserts Filter -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_desserts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Desserts"
                    android:textColor="@color/text_primary"
                    app:chipBackgroundColor="@color/white"
                    app:chipCornerRadius="20dp"
                    android:layout_marginEnd="8dp"
                    app:chipIcon="@drawable/ic_cake"
                    app:chipIconTint="@color/primary_color" />

                <!-- Healthy Filter -->
                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_healthy"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Healthy"
                    android:textColor="@color/text_primary"
                    app:chipBackgroundColor="@color/white"
                    app:chipCornerRadius="20dp"
                    app:chipIcon="@drawable/ic_eco"
                    app:chipIconTint="@color/success_color" />

            </LinearLayout>

        </HorizontalScrollView>

    </FrameLayout>

    <!-- Bottom Sheet for Vendor Details -->
    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bottom_sheet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_behavior="com.google.android.material.bottomsheet.BottomSheetBehavior"
        app:behavior_peekHeight="120dp"
        app:behavior_hideable="true"
        app:cardCornerRadius="20dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginStart="0dp"
        android:layout_marginEnd="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Drag Handle -->
            <View
                android:layout_width="40dp"
                android:layout_height="4dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/bottom_sheet_handle"
                android:layout_marginBottom="16dp" />

            <!-- Vendor Header Info -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Vendor Image -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp"
                    android:layout_marginEnd="16dp">

                    <ImageView
                        android:id="@+id/iv_vendor_image"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:src="@drawable/placeholder_food_van"
                        android:scaleType="centerCrop" />

                </com.google.android.material.card.MaterialCardView>

                <!-- Vendor Details -->
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_vendor_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tasty Treats Van"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:textColor="@color/text_primary" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="4dp">

                        <TextView
                            android:id="@+id/tv_vendor_rating"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4.5 â˜…"
                            android:textSize="14sp"
                            android:textColor="@color/warning_color"
                            android:drawablePadding="4dp" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/gray_300"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tv_vendor_distance"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.2 km"
                            android:textSize="14sp"
                            android:textColor="@color/text_secondary" />

                        <View
                            android:layout_width="1dp"
                            android:layout_height="12dp"
                            android:layout_gravity="center_vertical"
                            android:background="@color/gray_300"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp" />

                        <TextView
                            android:id="@+id/tv_vendor_eta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="15 min"
                            android:textSize="14sp"
                            android:textColor="@color/success_color" />

                    </LinearLayout>

                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Call Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_call_vendor"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:icon="@drawable/ic_call"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="20dp"
                        app:iconTint="@color/white"
                        app:backgroundTint="@color/success_color"
                        app:cornerRadius="20dp"
                        android:layout_marginEnd="8dp"
                        android:contentDescription="Call vendor" />

                    <!-- Favorite Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_favorite_vendor"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:insetTop="0dp"
                        android:insetBottom="0dp"
                        app:icon="@drawable/ic_favorite_border"
                        app:iconGravity="textStart"
                        app:iconPadding="0dp"
                        app:iconSize="20dp"
                        app:iconTint="@color/error_color"
                        app:backgroundTint="@color/white"
                        app:strokeColor="@color/error_color"
                        app:strokeWidth="1dp"
                        app:cornerRadius="20dp"
                        android:contentDescription="Add to favorites" />

                </LinearLayout>

            </LinearLayout>

            <!-- Vendor Categories -->
            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_categories"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                app:singleSelection="false">

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Fast Food"
                    android:textSize="12sp"
                    app:chipBackgroundColor="@color/primary_light"
                    app:chipCornerRadius="12dp"
                    android:textColor="@color/primary_color" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Beverages"
                    android:textSize="12sp"
                    app:chipBackgroundColor="@color/secondary_light"
                    app:chipCornerRadius="12dp"
                    android:textColor="@color/secondary_color" />

                <com.google.android.material.chip.Chip
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Snacks"
                    android:textSize="12sp"
                    app:chipBackgroundColor="@color/accent_light"
                    app:chipCornerRadius="12dp"
                    android:textColor="@color/accent_color" />

            </com.google.android.material.chip.ChipGroup>

            <!-- Action Buttons Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

                <!-- View Menu Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_view_menu"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="View Menu"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/primary_color"
                    app:cornerRadius="12dp"
                    android:layout_marginEnd="8dp"
                    app:icon="@drawable/ic_restaurant_menu"
                    app:iconTint="@color/white" />

                <!-- Get Directions Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_directions"
                    android:layout_width="0dp"
                    android:layout_height="48dp"
                    android:layout_weight="1"
                    android:text="Directions"
                    android:textColor="@color/primary_color"
                    app:backgroundTint="@color/white"
                    app:strokeColor="@color/primary_color"
                    app:strokeWidth="1dp"
                    app:cornerRadius="12dp"
                    android:layout_marginStart="8dp"
                    app:icon="@drawable/ic_directions"
                    app:iconTint="@color/primary_color" />

            </LinearLayout>

            <!-- Expanded Content (shown when bottom sheet is expanded) -->
            <LinearLayout
                android:id="@+id/expanded_content"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:visibility="gone">

                <!-- Popular Items -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Popular Items"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_popular_items"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    tools:listitem="@layout/item_popular_food" />

                <!-- Reviews Section -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Recent Reviews"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="12dp" />

                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_reviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_review" />

            </LinearLayout>

        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
