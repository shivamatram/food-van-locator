<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:scrollbars="none"
    android:background="?attr/colorSurface">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Existing UPI Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_existing_upi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="?attr/colorOutlineVariant"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_payment"
                        android:tint="@color/primary_color"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="UPI Details"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/roboto_bold" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_verification_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Verified"
                        android:textColor="@color/success_color"
                        app:chipBackgroundColor="@color/success_light"
                        app:chipIcon="@drawable/ic_verified"
                        app:chipIconTint="@color/success_color" />

                </LinearLayout>

                <!-- UPI ID Display -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="20dp">

                    <TextView
                        android:layout_width="80dp"
                        android:layout_height="wrap_content"
                        android:text="UPI ID:"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="@font/roboto_medium" />

                    <TextView
                        android:id="@+id/tv_upi_id"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="john@paytm"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/roboto_bold"
                        android:textIsSelectable="true" />

                </LinearLayout>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_verify_upi"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:text="Verify UPI"
                        android:textColor="@color/primary_color"
                        app:strokeColor="@color/primary_color"
                        app:iconTint="@color/primary_color"
                        app:icon="@drawable/ic_verified" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_edit_upi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Edit UPI"
                        android:backgroundTint="@color/primary_color"
                        android:textColor="@android:color/white"
                        app:iconTint="@android:color/white"
                        app:icon="@drawable/ic_edit" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Add/Edit UPI Form -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_add_upi"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="?attr/colorOutlineVariant"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="24dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_add"
                        android:tint="@color/primary_color"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Add UPI ID"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/roboto_bold" />

                </LinearLayout>

                <!-- UPI ID Input -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_upi_id"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    android:hint="UPI ID"
                    app:startIconDrawable="@drawable/ic_payment"
                    app:startIconTint="@color/primary_color"
                    app:boxStrokeColor="@color/primary_color"
                    app:hintTextColor="@color/primary_color"
                    app:helperText="Enter your UPI ID (e.g., name@paytm)">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_upi_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Info Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="20dp"
                    app:cardBackgroundColor="?attr/colorSurfaceContainer"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="16dp"
                        android:gravity="center_vertical">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:src="@drawable/ic_info"
                            android:tint="@color/primary_color"
                            android:layout_marginEnd="12dp" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Your UPI ID will be used for receiving payments. Make sure it's active and verified."
                            android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                            android:textColor="?attr/colorOnSurfaceVariant" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="end">

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_add_upi"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="12dp"
                        android:text="Cancel"
                        android:textColor="@color/primary_color"
                        app:strokeColor="@color/primary_color"
                        android:visibility="gone" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_save_upi"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Save UPI ID"
                        android:backgroundTint="@color/primary_color"
                        android:textColor="@android:color/white"
                        app:iconTint="@android:color/white"
                        app:icon="@drawable/ic_save" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- QR Code Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_qr_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
            app:cardCornerRadius="16dp"
            app:cardElevation="4dp"
            app:strokeColor="?attr/colorOutlineVariant"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp"
                android:gravity="center">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="20dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_qr_code"
                        android:tint="@color/primary_color"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="UPI QR Code"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/roboto_bold" />

                </LinearLayout>

                <!-- QR Code Image -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="200dp"
                    android:layout_height="200dp"
                    android:layout_marginBottom="16dp"
                    app:cardBackgroundColor="@android:color/white"
                    app:cardCornerRadius="12dp"
                    app:cardElevation="2dp">

                    <ImageView
                        android:id="@+id/iv_qr_code"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_margin="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_qr_code"
                        android:contentDescription="UPI QR Code" />

                </com.google.android.material.card.MaterialCardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Scan this QR code to receive payments"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="center"
                    android:layout_marginBottom="16dp" />

                <!-- Generate QR Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_generate_qr"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Generate QR Code"
                    android:textColor="@color/primary_color"
                    app:strokeColor="@color/primary_color"
                    app:iconTint="@color/primary_color"
                    app:icon="@drawable/ic_qr_code" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
