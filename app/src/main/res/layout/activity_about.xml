<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".activities.customer.AboutActivity">

    <!-- App Bar Layout -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_red"
        app:elevation="4dp">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar_about"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@android:color/transparent"
            app:title="About"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_arrow_back_white"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content with Scroll -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- App Logo and Basic Info Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="6dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="24dp"
                    android:gravity="center_horizontal">

                    <!-- App Logo -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:layout_marginBottom="20dp"
                        app:cardCornerRadius="50dp"
                        app:cardElevation="8dp"
                        app:strokeColor="@color/primary_red"
                        app:strokeWidth="2dp">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:src="@drawable/ic_food_van_logo"
                            android:scaleType="centerCrop"
                            android:contentDescription="@string/app_logo" />

                    </com.google.android.material.card.MaterialCardView>

                    <!-- App Name -->
                    <TextView
                        android:id="@+id/tv_app_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:text="Food Van"
                        android:textColor="@color/text_primary"
                        android:textSize="24sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_medium" />

                    <!-- App Version -->
                    <TextView
                        android:id="@+id/tv_app_version"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="4dp"
                        android:text="Version 1.0.0"
                        android:textColor="@color/primary_red"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:fontFamily="@font/roboto_medium" />

                    <!-- Build Info -->
                    <TextView
                        android:id="@+id/tv_build_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Build 1 â€¢ API Level 34"
                        android:textColor="@color/text_secondary"
                        android:textSize="13sp"
                        android:fontFamily="@font/roboto_regular" />

                    <!-- App Description -->
                    <TextView
                        android:id="@+id/tv_app_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="16dp"
                        android:text="Food Van connects local food vendors with hungry customers, providing real-time location tracking, easy ordering, and comprehensive feedback systems."
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textAlignment="center"
                        android:lineSpacingExtra="4dp" />

                    <!-- Developer Info -->
                    <TextView
                        android:id="@+id/tv_developer_info"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Developed by Shivam Atram &amp; Team\nÂ© 2024 Food Van App. All rights reserved."
                        android:textColor="@color/text_secondary"
                        android:textSize="12sp"
                        android:fontFamily="@font/roboto_regular"
                        android:textAlignment="center"
                        android:lineSpacingExtra="2dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Contact & Support Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="ðŸ“ž Contact &amp; Support"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_medium" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:strokeColor="@color/gray_light"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Contact Email Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_contact_email"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:padding="16dp"
                        android:text="ðŸ“§ Contact Support"
                        android:textSize="15sp"
                        app:backgroundTint="@color/info_color"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_email"
                        app:iconGravity="start"
                        app:iconPadding="12dp"
                        app:iconTint="@color/white" />

                    <!-- Rate App Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_rate_app"
                        style="@style/Widget.Material3.Button.TonalButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="16dp"
                        android:text="â­ Rate Our App"
                        android:textSize="15sp"
                        app:backgroundTint="@color/warning_color"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_star"
                        app:iconGravity="start"
                        app:iconPadding="12dp"
                        app:iconTint="@color/white" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Legal & Policies Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="ðŸ“„ Legal &amp; Policies"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_medium" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:strokeColor="@color/gray_light"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Privacy Policy Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_privacy_policy"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="12dp"
                        android:padding="12dp"
                        android:text="ðŸ”’ Privacy Policy"
                        android:textSize="14sp"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_privacy"
                        app:iconGravity="start"
                        app:iconPadding="8dp"
                        app:strokeColor="@color/primary_red"
                        app:strokeWidth="1dp" />

                    <!-- Terms of Service Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_terms_of_service"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="12dp"
                        android:text="ðŸ“‹ Terms of Service"
                        android:textSize="14sp"
                        app:cornerRadius="12dp"
                        app:icon="@drawable/ic_description"
                        app:iconGravity="start"
                        app:iconPadding="8dp"
                        app:strokeColor="@color/primary_red"
                        app:strokeWidth="1dp" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- App Features Section -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                android:text="âœ¨ Key Features"
                android:textColor="@color/text_primary"
                android:textSize="16sp"
                android:textStyle="bold"
                android:fontFamily="@font/roboto_medium" />

            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="32dp"
                app:cardBackgroundColor="@color/white"
                app:cardCornerRadius="16dp"
                app:cardElevation="3dp"
                app:strokeColor="@color/gray_light"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="16dp">

                    <!-- Feature List -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- Real-time Tracking -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:text="ðŸ“"
                                android:textSize="16sp"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="Real-time food van tracking"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:fontFamily="@font/roboto_regular" />

                        </LinearLayout>

                        <!-- Easy Ordering -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:text="ðŸ›’"
                                android:textSize="16sp"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="Easy online ordering system"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:fontFamily="@font/roboto_regular" />

                        </LinearLayout>

                        <!-- Secure Payments -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="12dp"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:text="ðŸ’³"
                                android:textSize="16sp"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="Secure payment processing"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:fontFamily="@font/roboto_regular" />

                        </LinearLayout>

                        <!-- Reviews & Ratings -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <TextView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:text="â­"
                                android:textSize="16sp"
                                android:gravity="center" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:layout_marginStart="12dp"
                                android:text="Reviews and ratings system"
                                android:textColor="@color/text_primary"
                                android:textSize="14sp"
                                android:fontFamily="@font/roboto_regular" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
