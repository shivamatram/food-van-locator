<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="@dimen/margin_medium"
    android:layout_marginVertical="@dimen/margin_small"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/card_corner_radius"
    app:cardElevation="@dimen/card_elevation"
    app:strokeWidth="0dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_medium">

        <!-- Notification Icon -->
        <ImageView
            android:id="@+id/iv_notification_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginEnd="@dimen/margin_medium"
            android:background="@drawable/circle_background_primary"
            android:padding="8dp"
            android:scaleType="centerInside"
            android:src="@drawable/ic_notifications"
            android:tint="@color/white"
            tools:ignore="UseAppTint" />

        <!-- Content Container -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Title and Timestamp Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <!-- Notification Title -->
                <TextView
                    android:id="@+id/tv_notification_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:maxLines="1"
                    android:textColor="@color/text_primary"
                    android:textSize="@dimen/text_size_medium"
                    android:textStyle="bold"
                    tools:text="New Order Received" />

                <!-- Timestamp -->
                <TextView
                    android:id="@+id/tv_notification_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/margin_small"
                    android:textColor="@color/text_secondary"
                    android:textSize="@dimen/text_size_small"
                    tools:text="2 mins ago" />

            </LinearLayout>

            <!-- Notification Message -->
            <TextView
                android:id="@+id/tv_notification_message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_normal"
                tools:text="Order #12345 has been placed by John Doe. Please prepare the items and confirm." />

            <!-- Order ID (for order notifications) -->
            <TextView
                android:id="@+id/tv_order_id"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:background="@drawable/rounded_background_light"
                android:paddingHorizontal="@dimen/padding_small"
                android:paddingVertical="4dp"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/text_size_small"
                android:textStyle="bold"
                android:visibility="gone"
                tools:text="Order #12345"
                tools:visibility="visible" />

        </LinearLayout>

        <!-- Unread Indicator -->
        <View
            android:id="@+id/view_unread_indicator"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:layout_gravity="top"
            android:layout_marginStart="@dimen/margin_small"
            android:layout_marginTop="4dp"
            android:background="@drawable/circle_background_accent"
            android:visibility="gone"
            tools:visibility="visible" />

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
