<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/bg_dialog_rounded"
    android:padding="0dp">

    <!-- Dialog Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:padding="20dp"
        android:background="@color/primary">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_payment"
            android:tint="@color/white"
            android:layout_marginEnd="12dp" />

        <TextView
            android:id="@+id/tv_dialog_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add Payment Method"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/white" />

        <ImageView
            android:id="@+id/iv_close_dialog"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:tint="@color/white"
            android:background="@drawable/bg_circle_ripple_white"
            android:padding="4dp"
            android:clickable="true"
            android:focusable="true" />

    </LinearLayout>

    <!-- Dialog Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="500dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <!-- Payment Type Selection -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Select Payment Type"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="12dp" />

            <com.google.android.material.chip.ChipGroup
                android:id="@+id/chip_group_payment_type"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="20dp"
                app:singleSelection="true"
                app:selectionRequired="true">

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_credit_card"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Credit Card"
                    android:checked="true"
                    app:chipIcon="@drawable/ic_credit_card"
                    app:chipIconTint="@color/chip_icon_selector" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_debit_card"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Debit Card"
                    app:chipIcon="@drawable/ic_debit_card"
                    app:chipIconTint="@color/chip_icon_selector" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_upi"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UPI"
                    app:chipIcon="@drawable/ic_upi"
                    app:chipIconTint="@color/chip_icon_selector" />

                <com.google.android.material.chip.Chip
                    android:id="@+id/chip_wallet"
                    style="@style/Widget.Material3.Chip.Filter"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wallet"
                    app:chipIcon="@drawable/ic_wallet"
                    app:chipIconTint="@color/chip_icon_selector" />

            </com.google.android.material.chip.ChipGroup>

            <!-- Card Details Form -->
            <LinearLayout
                android:id="@+id/layout_card_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="visible">

                <!-- Card Number -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_card_number"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Card Number"
                    app:startIconDrawable="@drawable/ic_credit_card"
                    app:startIconTint="@color/text_hint"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_card_number"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="number"
                        android:maxLength="19"
                        tools:text="1234 5678 9012 3456" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Cardholder Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_cardholder_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Cardholder Name"
                    app:startIconDrawable="@drawable/ic_person"
                    app:startIconTint="@color/text_hint"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_cardholder_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName|textCapWords"
                        tools:text="John Doe" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Expiry and CVV Row -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginBottom="12dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_expiry_date"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginEnd="8dp"
                        android:hint="MM/YY"
                        app:startIconDrawable="@drawable/ic_calendar"
                        app:startIconTint="@color/text_hint"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/primary">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_expiry_date"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="number"
                            android:maxLength="5"
                            tools:text="12/25" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/til_cvv"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="8dp"
                        android:hint="CVV"
                        app:startIconDrawable="@drawable/ic_security"
                        app:startIconTint="@color/text_hint"
                        app:boxStrokeColor="@color/primary"
                        app:hintTextColor="@color/primary"
                        app:passwordToggleEnabled="true">

                        <com.google.android.material.textfield.TextInputEditText
                            android:id="@+id/et_cvv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="numberPassword"
                            android:maxLength="4"
                            tools:text="123" />

                    </com.google.android.material.textfield.TextInputLayout>

                </LinearLayout>

                <!-- Bank Name -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_bank_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Bank Name (Optional)"
                    app:startIconDrawable="@drawable/ic_bank"
                    app:startIconTint="@color/text_hint"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_bank_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textCapWords"
                        tools:text="State Bank of India" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- UPI Details Form -->
            <LinearLayout
                android:id="@+id/layout_upi_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- UPI ID -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_upi_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="UPI ID"
                    app:startIconDrawable="@drawable/ic_upi"
                    app:startIconTint="@color/text_hint"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_upi_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textEmailAddress"
                        tools:text="user@paytm" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- UPI Provider Selection -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="UPI Provider"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_upi_provider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_gpay"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Google Pay"
                        app:chipIcon="@drawable/ic_gpay" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_phonepe"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PhonePe"
                        app:chipIcon="@drawable/ic_phonepe" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_paytm"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paytm"
                        app:chipIcon="@drawable/ic_paytm" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_other_upi"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Other"
                        app:chipIcon="@drawable/ic_upi" />

                </com.google.android.material.chip.ChipGroup>

            </LinearLayout>

            <!-- Wallet Details Form -->
            <LinearLayout
                android:id="@+id/layout_wallet_form"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:visibility="gone">

                <!-- Wallet Provider Selection -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Wallet Provider"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary"
                    android:layout_marginBottom="8dp" />

                <com.google.android.material.chip.ChipGroup
                    android:id="@+id/chip_group_wallet_provider"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    app:singleSelection="true">

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_paytm_wallet"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Paytm Wallet"
                        app:chipIcon="@drawable/ic_paytm" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_phonepe_wallet"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PhonePe Wallet"
                        app:chipIcon="@drawable/ic_phonepe" />

                    <com.google.android.material.chip.Chip
                        android:id="@+id/chip_amazon_pay"
                        style="@style/Widget.Material3.Chip.Filter"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Amazon Pay"
                        app:chipIcon="@drawable/ic_amazon_pay" />

                </com.google.android.material.chip.ChipGroup>

                <!-- Wallet ID -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_wallet_id"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="12dp"
                    android:hint="Wallet ID / Phone Number"
                    app:startIconDrawable="@drawable/ic_wallet"
                    app:startIconTint="@color/text_hint"
                    app:boxStrokeColor="@color/primary"
                    app:hintTextColor="@color/primary">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_wallet_id"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="phone"
                        tools:text="9876543210" />

                </com.google.android.material.textfield.TextInputLayout>

            </LinearLayout>

            <!-- Set as Default -->
            <com.google.android.material.checkbox.MaterialCheckBox
                android:id="@+id/cb_set_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Set as default payment method"
                android:textSize="14sp"
                android:textColor="@color/text_primary"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="20dp"
                app:buttonTint="@color/primary" />

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="end">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_cancel"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="8dp"
                    android:text="Cancel"
                    android:textColor="@color/text_secondary" />

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Save Payment Method"
                    android:textColor="@color/white"
                    app:backgroundTint="@color/primary"
                    app:cornerRadius="8dp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
