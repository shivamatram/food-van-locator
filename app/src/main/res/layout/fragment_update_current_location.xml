<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:padding="16dp"
    tools:context=".fragments.vendor.location.UpdateCurrentLocationFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Current Location Status Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainer"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_my_location"
                        android:tint="@color/primary_color"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Current Location Status"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/roboto_bold" />

                </LinearLayout>

                <!-- Location Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:id="@+id/iv_status_icon"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:src="@drawable/ic_check_circle"
                        android:tint="@color/success_color"
                        android:layout_marginEnd="8dp" />

                    <TextView
                        android:id="@+id/tv_location_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Location Active"
                        android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                        android:textColor="@color/success_color"
                        android:fontFamily="@font/roboto_medium" />

                </LinearLayout>

                <!-- Last Updated -->
                <TextView
                    android:id="@+id/tv_last_updated"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Last Updated: Never"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="16dp" />

                <!-- Current Coordinates -->
                <LinearLayout
                    android:id="@+id/layout_coordinates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Current Coordinates:"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/roboto_medium"
                        android:layout_marginBottom="4dp" />

                    <TextView
                        android:id="@+id/tv_coordinates"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lat: 0.000000, Lng: 0.000000"
                        android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:fontFamily="@font/roboto_mono" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Update Location Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardBackgroundColor="?attr/colorSurfaceContainer"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <ImageView
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:src="@drawable/ic_gps_fixed"
                        android:tint="@color/primary_color"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Update Your Location"
                        android:textAppearance="@style/TextAppearance.Material3.TitleLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:fontFamily="@font/roboto_bold" />

                </LinearLayout>

                <!-- Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Tap below to update your current GPS location so customers can see your real-time van position."
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="20dp"
                    android:lineSpacingExtra="2dp" />

                <!-- Update Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_update_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Update Location"
                    android:textSize="16sp"
                    android:backgroundTint="@color/primary_color"
                    android:textColor="@android:color/white"
                    app:iconTint="@android:color/white"
                    app:icon="@drawable/ic_my_location"
                    app:cornerRadius="12dp"
                    android:layout_marginBottom="12dp" />

                <!-- Progress Indicator -->
                <com.google.android.material.progressindicator.LinearProgressIndicator
                    android:id="@+id/progress_location"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    app:indicatorColor="@color/primary_color"
                    app:trackColor="@color/primary_light"
                    android:indeterminate="true" />

                <!-- Info Text -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Your current location will be visible to customers in real-time."
                    android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                    android:textColor="@color/info_color"
                    android:layout_marginTop="8dp"
                    android:drawableStart="@drawable/ic_info"
                    android:drawableTint="@color/info_color"
                    android:drawablePadding="8dp"
                    android:gravity="center_vertical" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Location Permissions Card -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/card_permissions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"
            app:cardBackgroundColor="@color/warning_light"
            app:cardCornerRadius="16dp"
            app:cardElevation="2dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="20dp">

                <!-- Header -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="12dp">

                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_warning"
                        android:tint="@color/warning_color"
                        android:layout_marginEnd="12dp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Location Permission Required"
                        android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                        android:textColor="@color/warning_color"
                        android:fontFamily="@font/roboto_bold" />

                </LinearLayout>

                <!-- Description -->
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please enable location permissions to update your current position."
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="@color/warning_color"
                    android:layout_marginBottom="16dp" />

                <!-- Enable Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_enable_permissions"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Enable Permissions"
                    android:textColor="@color/warning_color"
                    app:strokeColor="@color/warning_color"
                    app:iconTint="@color/warning_color"
                    app:icon="@drawable/ic_location_on" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
