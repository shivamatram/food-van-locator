<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="?attr/colorOutlineVariant"
    app:strokeWidth="1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="8dp">

            <!-- Address Type Icon -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                app:cardCornerRadius="12dp"
                app:cardElevation="0dp"
                android:layout_marginEnd="12dp">

                <ImageView
                    android:id="@+id/iv_address_type_icon"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_location_on"
                    app:tint="@color/primary_color" />

            </com.google.android.material.card.MaterialCardView>

            <!-- Address Label -->
            <TextView
                android:id="@+id/tv_address_label"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Business Location"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/roboto_bold"
                tools:text="Business Location" />

            <!-- Primary Badge -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chip_primary"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Primary"
                android:textColor="@color/primary_color"
                app:chipBackgroundColor="?attr/colorSurfaceContainerLow"
                app:chipIcon="@drawable/ic_star_filled"
                app:chipIconTint="@color/primary_color"
                android:layout_marginEnd="8dp"
                android:visibility="gone"
                tools:visibility="visible" />

            <!-- More Options -->
            <ImageView
                android:id="@+id/iv_more_options"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_more_vert"
                app:tint="?attr/colorOnSurfaceVariant"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:contentDescription="More options" />

        </LinearLayout>

        <!-- Full Address -->
        <TextView
            android:id="@+id/tv_full_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="123 Food Street, Market Area, City - 123456"
            android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
            android:textColor="?attr/colorOnSurfaceVariant"
            android:fontFamily="@font/roboto_regular"
            android:lineSpacingExtra="2dp"
            android:layout_marginBottom="12dp"
            android:maxLines="2"
            android:ellipsize="end"
            tools:text="123 Food Street, Market Area, City - 123456" />

        <!-- Address Details Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <!-- Landmark -->
            <LinearLayout
                android:id="@+id/layout_landmark"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:src="@drawable/ic_landmark"
                    android:tint="@color/text_hint"
                    android:layout_marginEnd="4dp" />

                <TextView
                    android:id="@+id/tv_landmark"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Near Central Park"
                    android:textSize="12sp"
                    android:textColor="@color/text_hint"
                    android:maxLines="1"
                    android:ellipsize="end"
                    tools:text="Near Central Park" />

            </LinearLayout>

            <!-- Action Buttons -->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <!-- Set Primary Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_set_primary"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Set Primary"
                    android:textSize="12sp"
                    android:minWidth="0dp"
                    android:paddingHorizontal="12dp"
                    android:textColor="@color/primary_color"
                    app:strokeColor="@color/primary_color"
                    app:cornerRadius="12dp"
                    android:layout_marginEnd="8dp"
                    tools:visibility="visible" />

                <!-- Edit Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_edit_address"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Edit"
                    android:textSize="12sp"
                    android:minWidth="0dp"
                    android:paddingHorizontal="12dp"
                    android:textColor="@color/primary_color"
                    app:strokeColor="@color/primary_color"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_edit"
                    app:iconTint="@color/primary_color"
                    android:layout_marginEnd="8dp" />

                <!-- Delete Button -->
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_delete_address"
                    style="@style/Widget.Material3.Button.OutlinedButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Delete"
                    android:textSize="12sp"
                    android:minWidth="0dp"
                    android:paddingHorizontal="12dp"
                    app:cornerRadius="12dp"
                    app:icon="@drawable/ic_delete"
                    app:iconTint="?attr/colorError"
                    android:textColor="?attr/colorError"
                    app:strokeColor="?attr/colorError" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
