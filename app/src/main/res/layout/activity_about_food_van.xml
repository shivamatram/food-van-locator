<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary"
    tools:context=".activities.customer.AboutFoodVanActivity">

    <!-- Status Bar Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/primary_color" />

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        app:title="@string/about_food_van"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@android:color/white" />

    <!-- Content Container -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Loading State -->
        <LinearLayout
            android:id="@+id/layout_loading"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/spacing_large"
            android:visibility="gone">

            <ProgressBar
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:indeterminateTint="@color/primary_color" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/loading_about_data"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/roboto_medium" />

        </LinearLayout>

        <!-- Error State -->
        <LinearLayout
            android:id="@+id/layout_error"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="@dimen/spacing_large"
            android:visibility="gone">

            <ImageView
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:src="@drawable/ic_error_outline"
                app:tint="@color/gray_400"
                android:contentDescription="@string/error_loading_about_data" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/error_loading_about_data"
                android:textSize="@dimen/text_size_large"
                android:textColor="@color/text_primary"
                android:fontFamily="@font/roboto_medium"
                android:layout_marginBottom="@dimen/spacing_small" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/error_loading_about_subtitle"
                android:textSize="@dimen/text_size_medium"
                android:textColor="@color/text_secondary"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:layout_marginBottom="@dimen/spacing_normal" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_retry"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/retry"
                app:icon="@drawable/ic_refresh"
                style="@style/Widget.Material3.Button.OutlinedButton" />

        </LinearLayout>

        <!-- Main Content -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_normal">

                <!-- Hero Section Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_normal"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardBackgroundColor="@color/background_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:padding="@dimen/spacing_large">

                        <!-- App Icon -->
                        <ImageView
                            android:id="@+id/iv_app_icon"
                            android:layout_width="96dp"
                            android:layout_height="96dp"
                            android:src="@drawable/ic_food_van_logo"
                            android:layout_marginBottom="@dimen/spacing_normal"
                            android:contentDescription="@string/app_logo" />

                        <!-- App Name -->
                        <TextView
                            android:id="@+id/tv_app_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_name"
                            android:textSize="@dimen/text_size_extra_large"
                            android:textColor="@color/primary_color"
                            android:fontFamily="@font/roboto_bold"
                            android:layout_marginBottom="@dimen/spacing_tiny" />

                        <!-- App Tagline -->
                        <TextView
                            android:id="@+id/tv_tagline"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_tagline"
                            android:textSize="@dimen/text_size_medium"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Version & Metadata Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_normal"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardBackgroundColor="@color/background_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_normal">

                        <!-- Section Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/app_information"
                            android:textSize="@dimen/text_size_large"
                            android:textColor="@color/primary_color"
                            android:fontFamily="@font/roboto_medium"
                            android:layout_marginBottom="@dimen/spacing_normal" />

                        <!-- Version Info -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/spacing_small">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/version_label"
                                android:textSize="@dimen/text_size_normal"
                                android:textColor="@color/text_secondary"
                                android:fontFamily="@font/roboto_medium" />

                            <TextView
                                android:id="@+id/tv_version"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="2.1.0"
                                android:textSize="@dimen/text_size_normal"
                                android:textColor="@color/text_primary"
                                android:fontFamily="@font/roboto_medium" />

                        </LinearLayout>

                        <!-- Build Info -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_marginBottom="@dimen/spacing_small">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/build_label"
                                android:textSize="@dimen/text_size_normal"
                                android:textColor="@color/text_secondary"
                                android:fontFamily="@font/roboto_medium" />

                            <TextView
                                android:id="@+id/tv_build"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="203"
                                android:textSize="@dimen/text_size_normal"
                                android:textColor="@color/text_primary"
                                android:fontFamily="@font/roboto_medium" />

                        </LinearLayout>

                        <!-- Copyright Info -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="@string/copyright_label"
                                android:textSize="@dimen/text_size_normal"
                                android:textColor="@color/text_secondary"
                                android:fontFamily="@font/roboto_medium" />

                            <TextView
                                android:id="@+id/tv_copyright"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/default_copyright"
                                android:textSize="@dimen/text_size_normal"
                                android:textColor="@color/text_primary"
                                android:fontFamily="@font/roboto_medium" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Quick Actions Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_normal"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardBackgroundColor="@color/background_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_normal">

                        <!-- Section Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/quick_actions"
                            android:textSize="@dimen/text_size_large"
                            android:textColor="@color/primary_color"
                            android:fontFamily="@font/roboto_medium"
                            android:layout_marginBottom="@dimen/spacing_normal" />

                        <!-- Rate App -->
                        <LinearLayout
                            android:id="@+id/btn_rate_app"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="@dimen/spacing_small"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="@dimen/icon_size_medium"
                                android:layout_height="@dimen/icon_size_medium"
                                android:src="@drawable/ic_star"
                                app:tint="@color/accent_color"
                                android:layout_marginEnd="@dimen/spacing_normal"
                                android:contentDescription="@string/rate_app" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/rate_app"
                                    android:textSize="@dimen/text_size_medium"
                                    android:textColor="@color/text_primary"
                                    android:fontFamily="@font/roboto_medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/rate_app_description"
                                    android:textSize="@dimen/text_size_small"
                                    android:textColor="@color/text_secondary"
                                    android:fontFamily="@font/roboto_regular" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="@dimen/icon_size_small"
                                android:layout_height="@dimen/icon_size_small"
                                android:src="@drawable/ic_chevron_right"
                                app:tint="@color/gray_400"
                                android:contentDescription="@string/navigate_icon" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray_200"
                            android:layout_marginVertical="@dimen/spacing_tiny" />

                        <!-- Share App -->
                        <LinearLayout
                            android:id="@+id/btn_share_app"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="@dimen/spacing_small"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="@dimen/icon_size_medium"
                                android:layout_height="@dimen/icon_size_medium"
                                android:src="@drawable/ic_share"
                                app:tint="@color/secondary_color"
                                android:layout_marginEnd="@dimen/spacing_normal"
                                android:contentDescription="@string/share_app" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/share_app"
                                    android:textSize="@dimen/text_size_medium"
                                    android:textColor="@color/text_primary"
                                    android:fontFamily="@font/roboto_medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/share_app_description"
                                    android:textSize="@dimen/text_size_small"
                                    android:textColor="@color/text_secondary"
                                    android:fontFamily="@font/roboto_regular" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="@dimen/icon_size_small"
                                android:layout_height="@dimen/icon_size_small"
                                android:src="@drawable/ic_chevron_right"
                                app:tint="@color/gray_400"
                                android:contentDescription="@string/navigate_icon" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray_200"
                            android:layout_marginVertical="@dimen/spacing_tiny" />

                        <!-- Contact Support -->
                        <LinearLayout
                            android:id="@+id/btn_contact_support"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="@dimen/spacing_small"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="@dimen/icon_size_medium"
                                android:layout_height="@dimen/icon_size_medium"
                                android:src="@drawable/ic_support"
                                app:tint="@color/primary_color"
                                android:layout_marginEnd="@dimen/spacing_normal"
                                android:contentDescription="@string/contact_support" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/contact_support"
                                    android:textSize="@dimen/text_size_medium"
                                    android:textColor="@color/text_primary"
                                    android:fontFamily="@font/roboto_medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/contact_support_description"
                                    android:textSize="@dimen/text_size_small"
                                    android:textColor="@color/text_secondary"
                                    android:fontFamily="@font/roboto_regular" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="@dimen/icon_size_small"
                                android:layout_height="@dimen/icon_size_small"
                                android:src="@drawable/ic_chevron_right"
                                app:tint="@color/gray_400"
                                android:contentDescription="@string/navigate_icon" />

                        </LinearLayout>

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:background="@color/gray_200"
                            android:layout_marginVertical="@dimen/spacing_tiny" />

                        <!-- Send Feedback -->
                        <LinearLayout
                            android:id="@+id/btn_send_feedback"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:padding="@dimen/spacing_small"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackground">

                            <ImageView
                                android:layout_width="@dimen/icon_size_medium"
                                android:layout_height="@dimen/icon_size_medium"
                                android:src="@drawable/ic_feedback"
                                app:tint="#9C27B0"
                                android:layout_marginEnd="@dimen/spacing_normal"
                                android:contentDescription="@string/send_feedback" />

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/send_feedback"
                                    android:textSize="@dimen/text_size_medium"
                                    android:textColor="@color/text_primary"
                                    android:fontFamily="@font/roboto_medium" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/send_feedback_description"
                                    android:textSize="@dimen/text_size_small"
                                    android:textColor="@color/text_secondary"
                                    android:fontFamily="@font/roboto_regular" />

                            </LinearLayout>

                            <ImageView
                                android:layout_width="@dimen/icon_size_small"
                                android:layout_height="@dimen/icon_size_small"
                                android:src="@drawable/ic_chevron_right"
                                app:tint="@color/gray_400"
                                android:contentDescription="@string/navigate_icon" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Social Media Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_normal"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardBackgroundColor="@color/background_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_normal">

                        <!-- Section Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/follow_us"
                            android:textSize="@dimen/text_size_large"
                            android:textColor="@color/primary_color"
                            android:fontFamily="@font/roboto_medium"
                            android:layout_marginBottom="@dimen/spacing_normal" />

                        <!-- Social Buttons Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center">

                            <!-- Instagram -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_instagram"
                                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_margin="@dimen/spacing_small"
                                app:icon="@drawable/ic_instagram"
                                app:iconSize="24dp"
                                app:iconTint="@null"
                                android:contentDescription="@string/follow_instagram" />

                            <!-- Twitter -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_twitter"
                                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_margin="@dimen/spacing_small"
                                app:icon="@drawable/ic_twitter"
                                app:iconSize="24dp"
                                app:iconTint="@null"
                                android:contentDescription="@string/follow_twitter" />

                            <!-- WhatsApp -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_whatsapp"
                                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_margin="@dimen/spacing_small"
                                app:icon="@drawable/ic_whatsapp"
                                app:iconSize="24dp"
                                app:iconTint="@null"
                                android:contentDescription="@string/whatsapp_support" />

                            <!-- Website -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_website"
                                style="@style/Widget.Material3.Button.IconButton.Filled.Tonal"
                                android:layout_width="56dp"
                                android:layout_height="56dp"
                                android:layout_margin="@dimen/spacing_small"
                                app:icon="@drawable/ic_open_in_new"
                                app:iconSize="24dp"
                                app:iconTint="@color/primary_color"
                                android:contentDescription="@string/visit_website" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Team Credits Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_normal"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardBackgroundColor="@color/background_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_normal">

                        <!-- Section Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/team_credits"
                            android:textSize="@dimen/text_size_large"
                            android:textColor="@color/primary_color"
                            android:fontFamily="@font/roboto_medium"
                            android:layout_marginBottom="@dimen/spacing_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/team_credits_description"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_marginBottom="@dimen/spacing_normal" />

                        <!-- Team Members RecyclerView -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_team_members"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Changelog Card -->
                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_large"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="@dimen/card_elevation"
                    app:cardBackgroundColor="@color/background_card">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_normal">

                        <!-- Section Title -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/changelog"
                            android:textSize="@dimen/text_size_large"
                            android:textColor="@color/primary_color"
                            android:fontFamily="@font/roboto_medium"
                            android:layout_marginBottom="@dimen/spacing_small" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/changelog_description"
                            android:textSize="@dimen/text_size_normal"
                            android:textColor="@color/text_secondary"
                            android:fontFamily="@font/roboto_regular"
                            android:layout_marginBottom="@dimen/spacing_normal" />

                        <!-- Changelog RecyclerView -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/rv_changelog"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </FrameLayout>

</LinearLayout>
