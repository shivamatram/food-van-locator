<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:orientation="vertical"
    android:fitsSystemWindows="false"
    tools:context=".activities.vendor.VendorReviewsActivity">

    <!-- Status Bar Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/primary_color" />

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:elevation="@dimen/toolbar_elevation"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/white"
        app:title="Reviews &amp; Ratings"
        app:titleTextColor="@color/white" />

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:fillViewport="true"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/screen_margin_horizontal">

            <!-- Summary Header Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_summary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_normal"
                app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="@dimen/card_elevation"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/card_padding">

                    <!-- Header Row -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="@dimen/spacing_normal">

                        <!-- Overall Rating -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_overall_rating"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4.6"
                                android:textAppearance="@style/TextAppearance.Material3.HeadlineLarge"
                                android:textColor="?attr/colorOnSurface"
                                android:fontFamily="@font/roboto_bold" />

                            <RatingBar
                                android:id="@+id/rating_bar_overall"
                                style="?android:attr/ratingBarStyleSmall"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:numStars="5"
                                android:rating="4.6"
                                android:isIndicator="true"
                                android:progressTint="@color/accent_color"
                                android:secondaryProgressTint="@color/accent_light"
                                android:layout_marginTop="@dimen/spacing_tiny" />

                            <TextView
                                android:id="@+id/tv_total_reviews"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Based on 127 reviews"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:layout_marginTop="@dimen/spacing_tiny" />

                        </LinearLayout>

                        <!-- Trend Indicator -->
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center">

                            <TextView
                                android:id="@+id/tv_trend_label"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="30-day trend"
                                android:textAppearance="@style/TextAppearance.Material3.BodySmall"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                            <TextView
                                android:id="@+id/tv_trend_value"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="↗ Improving"
                                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                                android:textColor="@color/secondary_color"
                                android:fontFamily="@font/roboto_medium"
                                android:layout_marginTop="@dimen/spacing_tiny" />

                        </LinearLayout>

                    </LinearLayout>

                    <!-- Rating Breakdown -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginBottom="@dimen/spacing_normal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Rating Breakdown"
                            android:textAppearance="@style/TextAppearance.Material3.TitleMedium"
                            android:textColor="?attr/colorOnSurface"
                            android:fontFamily="@font/roboto_medium"
                            android:layout_marginBottom="@dimen/spacing_small" />

                        <!-- 5 Star Row -->
                        <include layout="@layout/item_rating_breakdown"
                            android:id="@+id/rating_5_star" />

                        <!-- 4 Star Row -->
                        <include layout="@layout/item_rating_breakdown"
                            android:id="@+id/rating_4_star" />

                        <!-- 3 Star Row -->
                        <include layout="@layout/item_rating_breakdown"
                            android:id="@+id/rating_3_star" />

                        <!-- 2 Star Row -->
                        <include layout="@layout/item_rating_breakdown"
                            android:id="@+id/rating_2_star" />

                        <!-- 1 Star Row -->
                        <include layout="@layout/item_rating_breakdown"
                            android:id="@+id/rating_1_star" />

                    </LinearLayout>

                    <!-- Export Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_export_reviews"
                        style="@style/Widget.Material3.Button.OutlinedButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="Export Reviews"
                        android:textColor="@color/primary_color"
                        app:strokeColor="@color/primary_color"
                        app:icon="@drawable/ic_file_download"
                        app:iconTint="@color/primary_color"
                        app:iconGravity="textStart" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Search and Filter Section -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="@dimen/spacing_normal">

                <!-- Search Bar -->
                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/text_input_search"
                    style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/spacing_small"
                    android:hint="Search reviews..."
                    app:startIconDrawable="@drawable/ic_search"
                    app:endIconMode="clear_text">

                    <com.google.android.material.textfield.TextInputEditText
                        android:id="@+id/et_search"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:maxLines="1" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Filter Chips -->
                <HorizontalScrollView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="none">

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_filters"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:singleSelection="true"
                        app:selectionRequired="false">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_all"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All"
                            android:checked="true" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_5_star"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="5★" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_4_star"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="4★" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_3_star"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="3★" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_2_star"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="2★" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_1_star"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1★" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_with_replies"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="With Replies" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_without_replies"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Without Replies" />

                    </com.google.android.material.chip.ChipGroup>

                </HorizontalScrollView>

            </LinearLayout>

            <!-- Reviews List -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recycler_view_reviews"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false"
                tools:listitem="@layout/item_review_card" />

            <!-- Empty State -->
            <LinearLayout
                android:id="@+id/layout_empty_state"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:padding="@dimen/spacing_extra_large"
                android:visibility="gone"
                tools:visibility="visible">

                <ImageView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:src="@drawable/ic_reviews_empty"
                    android:contentDescription="No reviews"
                    app:tint="?attr/colorOnSurfaceVariant"
                    android:layout_marginBottom="@dimen/spacing_normal" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="No reviews yet"
                    android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:fontFamily="@font/roboto_medium"
                    android:layout_marginBottom="@dimen/spacing_small" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="When customers leave reviews, they'll appear here"
                    android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                    android:textColor="?attr/colorOnSurfaceVariant"
                    android:gravity="center"
                    android:layout_marginHorizontal="@dimen/spacing_large" />

            </LinearLayout>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

    <!-- Loading Progress (positioned over content) -->
    <com.google.android.material.progressindicator.CircularProgressIndicator
        android:id="@+id/progress_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:indeterminate="true"
        android:visibility="gone"
        app:indicatorColor="@color/primary_color"
        app:trackColor="?attr/colorSurfaceVariant" />

    <!-- Error Snackbar Anchor -->
    <View
        android:id="@+id/snackbar_anchor"
        android:layout_width="0dp"
        android:layout_height="0dp" />

</LinearLayout>
