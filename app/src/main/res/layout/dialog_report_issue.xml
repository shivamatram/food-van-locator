<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="@dimen/spacing_normal">

    <!-- Dialog Title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:gravity="center_vertical"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:contentDescription="Report Issue"
            android:src="@drawable/ic_report_problem"
            app:tint="@color/error_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:text="Report an Issue"
            android:textColor="@color/text_primary"
            android:textSize="20sp"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Order Selection (Optional) -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilOrder"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:hint="Related Order (Optional)"
        app:startIconDrawable="@drawable/ic_receipt"
        app:startIconTint="@color/text_secondary">

        <AutoCompleteTextView
            android:id="@+id/actvOrder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textSize="@dimen/text_size_normal" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Category Selection -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilCategory"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:hint="Issue Category *"
        app:startIconDrawable="@drawable/ic_category"
        app:startIconTint="@color/text_secondary">

        <AutoCompleteTextView
            android:id="@+id/actvCategory"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:textSize="@dimen/text_size_normal" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Description Input -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilDescription"
        style="@style/Widget.Material3.TextInputLayout.OutlinedBox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:hint="Describe your issue *"
        app:counterEnabled="true"
        app:counterMaxLength="500"
        app:endIconMode="clear_text"
        app:startIconDrawable="@drawable/ic_description"
        app:startIconTint="@color/text_secondary">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="top"
            android:inputType="textMultiLine|textCapSentences"
            android:maxLines="6"
            android:minLines="4"
            android:textSize="@dimen/text_size_normal" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Attachment Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:orientation="vertical">

        <!-- Attachment Placeholder -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAttachment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_small"
            android:clickable="true"
            android:focusable="true"
            app:cardCornerRadius="@dimen/corner_radius_small"
            app:cardElevation="0dp"
            app:strokeColor="@color/gray_300"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="@dimen/spacing_normal">

                <ImageView
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:contentDescription="Attach file"
                    android:src="@drawable/ic_attach_file"
                    app:tint="@color/primary_color" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/spacing_small"
                    android:text="Attach Screenshot (Optional)"
                    android:textColor="@color/primary_color"
                    android:textSize="@dimen/text_size_normal" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Attached Image Preview -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/cardAttachedImage"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/spacing_small"
            android:visibility="gone"
            app:cardCornerRadius="@dimen/corner_radius_small"
            app:cardElevation="0dp"
            app:strokeColor="@color/gray_300"
            app:strokeWidth="1dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/spacing_normal">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Attached Screenshot"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_normal"
                        android:textStyle="bold" />

                    <ImageButton
                        android:id="@+id/btnRemoveImage"
                        android:layout_width="32dp"
                        android:layout_height="32dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:contentDescription="Remove image"
                        android:src="@drawable/ic_close"
                        app:tint="@color/error_color" />

                </LinearLayout>

                <ImageView
                    android:id="@+id/ivAttachedPreview"
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginStart="@dimen/spacing_normal"
                    android:layout_marginEnd="@dimen/spacing_normal"
                    android:layout_marginBottom="@dimen/spacing_normal"
                    android:background="@color/gray_100"
                    android:contentDescription="Attached screenshot preview"
                    android:scaleType="centerCrop" />

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

    </LinearLayout>

    <!-- Warning Message -->
    <LinearLayout
        android:id="@+id/layoutOrderWarning"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spacing_normal"
        android:background="@drawable/bg_rounded_light"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_small"
        android:visibility="gone">

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:contentDescription="Warning"
            android:src="@drawable/ic_info"
            app:tint="@color/warning_color" />

        <TextView
            android:id="@+id/tvWarning"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:layout_weight="1"
            android:text="For payment/order issues, please select the related order."
            android:textColor="@color/warning_color"
            android:textSize="@dimen/text_size_small" />

    </LinearLayout>

    <!-- Progress Indicator -->
    <LinearLayout
        android:id="@+id/layoutSubmitting"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="horizontal"
        android:padding="@dimen/spacing_normal"
        android:visibility="gone">

        <ProgressBar
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:indeterminateTint="@color/primary_color" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/spacing_small"
            android:text="Submitting your report..."
            android:textColor="@color/text_secondary"
            android:textSize="@dimen/text_size_normal" />

    </LinearLayout>

    <!-- Action Buttons -->
    <LinearLayout
        android:id="@+id/layoutButtons"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnCancel"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Cancel"
            android:textColor="@color/text_secondary" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnSubmit"
            style="@style/Widget.Material3.Button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Submit Report"
            app:backgroundTint="@color/primary_color" />

    </LinearLayout>

</LinearLayout>
