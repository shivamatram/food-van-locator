<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- Dialog Header -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginBottom="20dp">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_location_pin"
                android:tint="@color/primary"
                android:layout_marginEnd="12dp" />

            <TextView
                android:id="@+id/tv_dialog_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Add New Address"
                android:textSize="20sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary" />

            <ImageView
                android:id="@+id/iv_close_dialog"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_close"
                android:tint="@color/text_secondary"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="4dp"
                android:contentDescription="Close dialog" />

        </LinearLayout>

        <!-- Address Type Selection -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address Type"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="8dp" />

        <com.google.android.material.chip.ChipGroup
            android:id="@+id/chip_group_address_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:singleSelection="true"
            app:selectionRequired="true">

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_home"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Home"
                android:checked="true"
                app:chipIcon="@drawable/ic_home"
                app:chipIconTint="@color/chip_icon_selector" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_work"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Work"
                app:chipIcon="@drawable/ic_work"
                app:chipIconTint="@color/chip_icon_selector" />

            <com.google.android.material.chip.Chip
                android:id="@+id/chip_other"
                style="@style/Widget.Material3.Chip.Filter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Other"
                app:chipIcon="@drawable/ic_location_pin"
                app:chipIconTint="@color/chip_icon_selector" />

        </com.google.android.material.chip.ChipGroup>

        <!-- Custom Label (for Other type) -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_custom_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:visibility="gone"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary"
            app:startIconDrawable="@drawable/ic_label"
            app:startIconTint="@color/primary"
            tools:visibility="visible">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_custom_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Enter custom label (e.g., Friend's House)"
                android:inputType="textCapWords"
                android:maxLength="30" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Contact Information -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Contact Information"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <!-- Name Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_contact_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary"
            app:startIconDrawable="@drawable/ic_person"
            app:startIconTint="@color/primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_contact_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name *"
                android:inputType="textPersonName|textCapWords"
                android:maxLength="50" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Phone Number Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_phone_number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary"
            app:startIconDrawable="@drawable/ic_phone"
            app:startIconTint="@color/primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_phone_number"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Phone Number *"
                android:inputType="phone"
                android:maxLength="15" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Address Information -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Address Details"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="12dp" />

        <!-- Flat/Building Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_flat_building"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary"
            app:startIconDrawable="@drawable/ic_building"
            app:startIconTint="@color/primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_flat_building"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Flat/House No, Building Name *"
                android:inputType="textPostalAddress|textCapWords"
                android:maxLength="100" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Street Address Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_street_address"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary"
            app:startIconDrawable="@drawable/ic_road"
            app:startIconTint="@color/primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_street_address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Street Address *"
                android:inputType="textPostalAddress|textCapWords"
                android:maxLength="150" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Landmark Field -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_landmark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary"
            app:startIconDrawable="@drawable/ic_landmark"
            app:startIconTint="@color/primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_landmark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Landmark (Optional)"
                android:inputType="textCapWords"
                android:maxLength="100" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- City and Pincode Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="16dp">

            <!-- City Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_city"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginEnd="8dp"
                app:boxStrokeColor="@color/primary"
                app:hintTextColor="@color/primary"
                app:startIconDrawable="@drawable/ic_city"
                app:startIconTint="@color/primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_city"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="City *"
                    android:inputType="textCapWords"
                    android:maxLength="50" />

            </com.google.android.material.textfield.TextInputLayout>

            <!-- Pincode Field -->
            <com.google.android.material.textfield.TextInputLayout
                android:id="@+id/til_pincode"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.7"
                android:layout_marginStart="8dp"
                app:boxStrokeColor="@color/primary"
                app:hintTextColor="@color/primary"
                app:startIconDrawable="@drawable/ic_pin"
                app:startIconTint="@color/primary">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/et_pincode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Pincode *"
                    android:inputType="number"
                    android:maxLength="6" />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <!-- Delivery Instructions -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/til_delivery_instructions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:boxStrokeColor="@color/primary"
            app:hintTextColor="@color/primary"
            app:startIconDrawable="@drawable/ic_instructions"
            app:startIconTint="@color/primary">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/et_delivery_instructions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Delivery Instructions (Optional)"
                android:inputType="textMultiLine|textCapSentences"
                android:maxLines="3"
                android:maxLength="200" />

        </com.google.android.material.textfield.TextInputLayout>

        <!-- Set as Default Checkbox -->
        <com.google.android.material.checkbox.MaterialCheckBox
            android:id="@+id/cb_set_as_default"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Set as default address"
            android:textSize="14sp"
            android:textColor="@color/text_primary"
            android:layout_marginBottom="24dp"
            app:buttonTint="@color/primary" />

        <!-- Action Buttons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="end">

            <!-- Cancel Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_cancel"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Cancel"
                android:textColor="@color/text_secondary"
                android:layout_marginEnd="12dp"
                app:cornerRadius="8dp" />

            <!-- Save Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_save_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save Address"
                android:textColor="@android:color/white"
                app:backgroundTint="@color/primary"
                app:cornerRadius="8dp"
                app:icon="@drawable/ic_save"
                app:iconTint="@android:color/white"
                app:iconGravity="textStart" />

        </LinearLayout>

        <!-- Progress Indicator -->
        <com.google.android.material.progressindicator.LinearProgressIndicator
            android:id="@+id/progress_save"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:visibility="gone"
            app:indicatorColor="@color/primary"
            app:trackColor="@color/primary_light" />

    </LinearLayout>

</androidx.core.widget.NestedScrollView>
