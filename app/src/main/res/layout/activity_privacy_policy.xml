<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary"
    tools:context=".activities.customer.PrivacyPolicyActivity">

    <!-- Status Bar Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/primary_color" />

    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        app:title="@string/privacy_policy_title"
        app:titleTextColor="@android:color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@android:color/white" />

    <!-- Main Content with Loading States -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/scroll_view_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Update Banner (Initially Hidden) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_update_banner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spacing_normal"
                android:visibility="gone"
                app:cardBackgroundColor="@color/accent_light"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="2dp"
                tools:visibility="visible">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/card_padding"
                    android:gravity="center_vertical">

                    <ImageView
                        android:layout_width="@dimen/icon_size_small"
                        android:layout_height="@dimen/icon_size_small"
                        android:layout_marginEnd="@dimen/spacing_small"
                        android:src="@drawable/ic_info"
                        app:tint="@color/primary_color" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/privacy_policy_updated"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_normal"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/tv_update_date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/privacy_policy_last_updated"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_small"
                            android:layout_marginTop="@dimen/spacing_tiny" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Content Container -->
            <LinearLayout
                android:id="@+id/layout_content_container"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/spacing_normal">

                <!-- Loading Indicator -->
                <LinearLayout
                    android:id="@+id/layout_loading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/spacing_extra_large"
                    android:visibility="visible">

                    <com.google.android.material.progressindicator.CircularProgressIndicator
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:indeterminate="true"
                        app:indicatorColor="@color/primary_color" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_normal"
                        android:text="@string/loading_privacy_policy"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_normal" />

                </LinearLayout>

                <!-- Error State -->
                <LinearLayout
                    android:id="@+id/layout_error"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:padding="@dimen/spacing_extra_large"
                    android:visibility="gone"
                    tools:visibility="gone">

                    <ImageView
                        android:layout_width="@dimen/icon_size_large"
                        android:layout_height="@dimen/icon_size_large"
                        android:layout_marginBottom="@dimen/spacing_normal"
                        android:src="@drawable/ic_error_outline"
                        app:tint="@color/text_secondary" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:text="@string/error_loading_privacy_policy"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold"
                        android:gravity="center" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_normal"
                        android:text="@string/error_loading_privacy_policy_subtitle"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_normal"
                        android:gravity="center" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_retry"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/retry"
                        app:backgroundTint="@color/primary_color"
                        app:cornerRadius="@dimen/button_corner_radius" />

                </LinearLayout>

                <!-- Privacy Policy Content -->
                <LinearLayout
                    android:id="@+id/layout_privacy_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:visibility="gone"
                    tools:visibility="visible">

                    <!-- Last Updated Info -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_large"
                        app:cardBackgroundColor="@color/background_card"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="@dimen/card_elevation"
                        app:strokeColor="@color/orangeAccent"
                        app:strokeWidth="1dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:padding="@dimen/card_padding"
                            android:gravity="center_vertical">

                            <ImageView
                                android:layout_width="@dimen/icon_size_small"
                                android:layout_height="@dimen/icon_size_small"
                                android:layout_marginEnd="@dimen/spacing_small"
                                android:src="@drawable/ic_update"
                                app:tint="@color/orangeAccent" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/privacy_policy_version_info"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/text_size_normal"
                                    android:textStyle="bold" />

                                <TextView
                                    android:id="@+id/tv_last_updated"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/spacing_tiny"
                                    android:text="@string/privacy_policy_last_updated_placeholder"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="@dimen/text_size_small"
                                    tools:text="Last updated: December 9, 2025" />

                                <TextView
                                    android:id="@+id/tv_version"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/privacy_policy_version_placeholder"
                                    android:textColor="@color/text_secondary"
                                    android:textSize="@dimen/text_size_small"
                                    tools:text="Version: 2.1.0" />

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- Dynamic Content Container -->
                    <LinearLayout
                        android:id="@+id/layout_dynamic_content"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        
                        <!-- Content will be dynamically added here -->
                        
                    </LinearLayout>

                    <!-- Contact Support Section -->
                    <com.google.android.material.card.MaterialCardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/spacing_large"
                        app:cardBackgroundColor="@color/background_card"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="@dimen/card_elevation">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="@dimen/card_padding">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/spacing_small"
                                android:text="@string/privacy_policy_contact_title"
                                android:textColor="@color/text_primary"
                                android:textSize="@dimen/text_size_medium"
                                android:textStyle="bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginBottom="@dimen/spacing_normal"
                                android:text="@string/privacy_policy_contact_description"
                                android:textColor="@color/text_secondary"
                                android:textSize="@dimen/text_size_normal"
                                android:lineSpacingExtra="@dimen/spacing_tiny" />

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:gravity="end">

                                <com.google.android.material.button.MaterialButton
                                    android:id="@+id/btn_contact_support"
                                    style="@style/Widget.Material3.Button.TextButton"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/contact_support"
                                    app:icon="@drawable/ic_support"
                                    app:iconTint="@color/primary_color"
                                    android:textColor="@color/primary_color" />

                            </LinearLayout>

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                </LinearLayout>

            </LinearLayout>

            <!-- Bottom Spacing -->
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/spacing_large" />

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>