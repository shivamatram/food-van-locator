<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true"
    android:animateLayoutChanges="true"
    tools:context=".activities.customer.ReviewsRatingsActivity">

    <!-- Enhanced App Bar Layout with Material Design 3 -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:elevation="0dp"
        android:fitsSystemWindows="true"
        app:elevation="0dp"
        app:liftOnScroll="true"
        app:liftOnScrollTargetViewId="@id/nested_scroll_view">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="280dp"
            android:fitsSystemWindows="true"
            app:collapsedTitleGravity="start"
            app:collapsedTitleTextAppearance="@style/TextAppearance.Material3.HeadlineSmall"
            app:contentScrim="?attr/colorSurface"
            app:expandedTitleGravity="bottom|start"
            app:expandedTitleMarginBottom="32dp"
            app:expandedTitleMarginStart="24dp"
            app:expandedTitleTextAppearance="@style/TextAppearance.Material3.HeadlineLarge"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:statusBarScrim="?attr/colorSurface"
            app:title="Reviews &amp; Ratings"
            app:titleCollapseMode="scale"
            app:scrimAnimationDuration="300">

            <!-- Enhanced Background with Gradient and Pattern -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/gradient_primary_background"
                android:alpha="0.08"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.5" />

            <!-- Decorative Pattern Overlay -->
            <View
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/pattern_dots"
                android:alpha="0.03"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.3" />

            <!-- Enhanced Rating Overview Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_rating_overview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                app:cardBackgroundColor="?attr/colorSurfaceContainerHighest"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.8"
                app:strokeColor="?attr/colorOutlineVariant"
                app:strokeWidth="0dp"
                android:stateListAnimator="@animator/card_elevation">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp"
                    android:clipToPadding="false">

                    <!-- Enhanced Average Rating with Animation Support -->
                    <TextView
                        android:id="@+id/tv_average_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto_bold"
                        android:text="4.5"
                        android:textColor="?attr/colorPrimary"
                        android:textSize="56sp"
                        android:textStyle="bold"
                        android:letterSpacing="-0.02"
                        android:includeFontPadding="false"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        tools:ignore="SpUsage" />

                    <TextView
                        android:id="@+id/tv_rating_suffix"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="6dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="/5"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="28sp"
                        android:includeFontPadding="false"
                        app:layout_constraintBaseline_toBaselineOf="@id/tv_average_rating"
                        app:layout_constraintStart_toEndOf="@id/tv_average_rating" />

                    <!-- Enhanced Star Rating Display -->
                    <LinearLayout
                        android:id="@+id/layout_stars"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:orientation="horizontal"
                        android:animateLayoutChanges="true"
                        app:layout_constraintStart_toStartOf="@id/tv_average_rating"
                        app:layout_constraintTop_toBottomOf="@id/tv_average_rating">

                        <ImageView
                            android:id="@+id/star_1"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="3dp"
                            android:contentDescription="@string/star_rating"
                            android:src="@drawable/ic_star_filled"
                            android:scaleType="centerInside"
                            app:tint="?attr/colorPrimary" />

                        <ImageView
                            android:id="@+id/star_2"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="3dp"
                            android:contentDescription="@string/star_rating"
                            android:src="@drawable/ic_star_filled"
                            android:scaleType="centerInside"
                            app:tint="?attr/colorPrimary" />

                        <ImageView
                            android:id="@+id/star_3"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="3dp"
                            android:contentDescription="@string/star_rating"
                            android:src="@drawable/ic_star_filled"
                            android:scaleType="centerInside"
                            app:tint="?attr/colorPrimary" />

                        <ImageView
                            android:id="@+id/star_4"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:layout_marginEnd="3dp"
                            android:contentDescription="@string/star_rating"
                            android:src="@drawable/ic_star_filled"
                            android:scaleType="centerInside"
                            app:tint="?attr/colorPrimary" />

                        <ImageView
                            android:id="@+id/star_5"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:contentDescription="@string/star_rating"
                            android:src="@drawable/ic_star_outline"
                            android:scaleType="centerInside"
                            app:tint="?attr/colorOutline" />

                    </LinearLayout>

                    <!-- Enhanced Total Reviews Count -->
                    <TextView
                        android:id="@+id/tv_total_reviews"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:fontFamily="@font/roboto_medium"
                        android:text="Based on 1,234 reviews"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:textSize="15sp"
                        android:letterSpacing="0.01"
                        app:layout_constraintStart_toStartOf="@id/layout_stars"
                        app:layout_constraintTop_toBottomOf="@id/layout_stars" />

                    <!-- Enhanced Rating Distribution -->
                    <LinearLayout
                        android:id="@+id/layout_rating_distribution"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="40dp"
                        android:orientation="vertical"
                        android:animateLayoutChanges="true"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/tv_average_rating"
                        app:layout_constraintTop_toTopOf="@id/tv_average_rating">

                        <!-- Enhanced 5 Stars -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="2dp">

                            <TextView
                                android:layout_width="12dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:text="5"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="13sp"
                                android:gravity="center" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="10dp"
                                android:contentDescription="@string/star_rating"
                                android:src="@drawable/ic_star_filled"
                                android:scaleType="centerInside"
                                app:tint="?attr/colorPrimary" />

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/progress_5_star"
                                android:layout_width="0dp"
                                android:layout_height="8dp"
                                android:layout_weight="1"
                                android:progress="75"
                                app:indicatorColor="?attr/colorPrimary"
                                app:trackColor="?attr/colorSurfaceVariant"
                                app:trackCornerRadius="4dp" />

                            <TextView
                                android:id="@+id/tv_5_star_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/roboto_medium"
                                android:text="925"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="13sp"
                                android:minWidth="32dp"
                                android:gravity="end" />

                        </LinearLayout>

                        <!-- Enhanced 4 Stars -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="2dp">

                            <TextView
                                android:layout_width="12dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:text="4"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="13sp"
                                android:gravity="center" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="10dp"
                                android:contentDescription="@string/star_rating"
                                android:src="@drawable/ic_star_filled"
                                android:scaleType="centerInside"
                                app:tint="?attr/colorPrimary" />

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/progress_4_star"
                                android:layout_width="0dp"
                                android:layout_height="8dp"
                                android:layout_weight="1"
                                android:progress="15"
                                app:indicatorColor="?attr/colorSecondary"
                                app:trackColor="?attr/colorSurfaceVariant"
                                app:trackCornerRadius="4dp" />

                            <TextView
                                android:id="@+id/tv_4_star_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/roboto_medium"
                                android:text="185"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="13sp"
                                android:minWidth="32dp"
                                android:gravity="end" />

                        </LinearLayout>

                        <!-- Enhanced 3 Stars -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="2dp">

                            <TextView
                                android:layout_width="12dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:text="3"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="13sp"
                                android:gravity="center" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="10dp"
                                android:contentDescription="@string/star_rating"
                                android:src="@drawable/ic_star_filled"
                                android:scaleType="centerInside"
                                app:tint="?attr/colorTertiary" />

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/progress_3_star"
                                android:layout_width="0dp"
                                android:layout_height="8dp"
                                android:layout_weight="1"
                                android:progress="6"
                                app:indicatorColor="?attr/colorTertiary"
                                app:trackColor="?attr/colorSurfaceVariant"
                                app:trackCornerRadius="4dp" />

                            <TextView
                                android:id="@+id/tv_3_star_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/roboto_medium"
                                android:text="74"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="13sp"
                                android:minWidth="32dp"
                                android:gravity="end" />

                        </LinearLayout>

                        <!-- Enhanced 2 Stars -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="6dp"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="2dp">

                            <TextView
                                android:layout_width="12dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:text="2"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="13sp"
                                android:gravity="center" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="10dp"
                                android:contentDescription="@string/star_rating"
                                android:src="@drawable/ic_star_filled"
                                android:scaleType="centerInside"
                                app:tint="?attr/colorError" />

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/progress_2_star"
                                android:layout_width="0dp"
                                android:layout_height="8dp"
                                android:layout_weight="1"
                                android:progress="3"
                                app:indicatorColor="?attr/colorError"
                                app:trackColor="?attr/colorSurfaceVariant"
                                app:trackCornerRadius="4dp" />

                            <TextView
                                android:id="@+id/tv_2_star_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/roboto_medium"
                                android:text="37"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="13sp"
                                android:minWidth="32dp"
                                android:gravity="end" />

                        </LinearLayout>

                        <!-- Enhanced 1 Star -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="2dp">

                            <TextView
                                android:layout_width="12dp"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_bold"
                                android:text="1"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="13sp"
                                android:gravity="center" />

                            <ImageView
                                android:layout_width="14dp"
                                android:layout_height="14dp"
                                android:layout_marginStart="4dp"
                                android:layout_marginEnd="10dp"
                                android:contentDescription="@string/star_rating"
                                android:src="@drawable/ic_star_filled"
                                android:scaleType="centerInside"
                                app:tint="?attr/colorError" />

                            <com.google.android.material.progressindicator.LinearProgressIndicator
                                android:id="@+id/progress_1_star"
                                android:layout_width="0dp"
                                android:layout_height="8dp"
                                android:layout_weight="1"
                                android:progress="1"
                                app:indicatorColor="?attr/colorError"
                                app:trackColor="?attr/colorSurfaceVariant"
                                app:trackCornerRadius="4dp" />

                            <TextView
                                android:id="@+id/tv_1_star_count"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="10dp"
                                android:fontFamily="@font/roboto_medium"
                                android:text="13"
                                android:textColor="?attr/colorOnSurfaceVariant"
                                android:textSize="13sp"
                                android:minWidth="32dp"
                                android:gravity="end" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Toolbar -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:layout_collapseMode="pin"
                app:menu="@menu/menu_reviews"
                app:navigationIcon="@drawable/ic_arrow_back"
                app:navigationIconTint="?attr/colorOnSurface" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.swiperefreshlayout.widget.SwipeRefreshLayout
        android:id="@+id/swipe_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/nested_scroll_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingBottom="100dp">

                <!-- Enhanced Filter and Sort Section -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_filters"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginVertical="12dp"
                    app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
                    app:cardCornerRadius="16dp"
                    app:cardElevation="2dp"
                    app:strokeColor="?attr/colorOutlineVariant"
                    app:strokeWidth="0dp"
                    android:stateListAnimator="@animator/card_elevation">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp"
                        android:animateLayoutChanges="true">

                        <!-- Enhanced Filter Chips -->
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Filter Reviews"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="16sp"
                            android:letterSpacing="0.01" />

                        <com.google.android.material.chip.ChipGroup
                            android:id="@+id/chip_group_filters"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="16dp"
                            app:chipSpacingHorizontal="10dp"
                            app:chipSpacingVertical="6dp"
                            app:selectionRequired="true"
                            app:singleSelection="true">

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_all_reviews"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true"
                                android:text="All Reviews"
                                android:textSize="13sp"
                                app:chipIcon="@drawable/ic_reviews"
                                app:chipIconTint="?attr/colorOnSurfaceVariant"
                                app:chipCornerRadius="20dp"
                                app:chipMinHeight="40dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_5_star"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="5 Stars"
                                android:textSize="13sp"
                                app:chipIcon="@drawable/ic_star_filled"
                                app:chipIconTint="?attr/colorPrimary"
                                app:chipCornerRadius="20dp"
                                app:chipMinHeight="40dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_4_star"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="4+ Stars"
                                android:textSize="13sp"
                                app:chipIcon="@drawable/ic_star_filled"
                                app:chipIconTint="?attr/colorSecondary"
                                app:chipCornerRadius="20dp"
                                app:chipMinHeight="40dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_recent"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Recent"
                                android:textSize="13sp"
                                app:chipIcon="@drawable/ic_schedule"
                                app:chipIconTint="?attr/colorTertiary"
                                app:chipCornerRadius="20dp"
                                app:chipMinHeight="40dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_verified"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Verified"
                                android:textSize="13sp"
                                app:chipIcon="@drawable/ic_verified"
                                app:chipIconTint="?attr/colorPrimary"
                                app:chipCornerRadius="20dp"
                                app:chipMinHeight="40dp" />

                            <com.google.android.material.chip.Chip
                                android:id="@+id/chip_with_photos"
                                style="@style/Widget.Material3.Chip.Filter"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="With Photos"
                                android:textSize="13sp"
                                app:chipIcon="@drawable/ic_camera"
                                app:chipIconTint="?attr/colorSecondary"
                                app:chipCornerRadius="20dp"
                                app:chipMinHeight="40dp" />

                        </com.google.android.material.chip.ChipGroup>

                        <!-- Enhanced Sort Options -->
                        <View
                            android:layout_width="match_parent"
                            android:layout_height="1dp"
                            android:layout_marginVertical="8dp"
                            android:background="?attr/colorOutlineVariant"
                            android:alpha="0.5" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingVertical="4dp">

                            <ImageView
                                android:layout_width="22dp"
                                android:layout_height="22dp"
                                android:layout_marginEnd="10dp"
                                android:contentDescription="@string/sort_reviews"
                                android:src="@drawable/ic_sort"
                                android:scaleType="centerInside"
                                app:tint="?attr/colorPrimary" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:fontFamily="@font/roboto_bold"
                                android:text="Sort by: Most Recent"
                                android:textColor="?attr/colorOnSurface"
                                android:textSize="15sp"
                                android:letterSpacing="0.01" />

                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btn_sort"
                                style="@style/Widget.Material3.Button.TonalButton"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Change"
                                android:textSize="13sp"
                                app:icon="@drawable/ic_expand_more"
                                app:iconGravity="end"
                                app:iconSize="18dp"
                                app:cornerRadius="12dp" />

                        </LinearLayout>

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Enhanced Reviews List -->
                <androidx.recyclerview.widget.RecyclerView
                    android:id="@+id/rv_reviews"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:clipToPadding="false"
                    android:nestedScrollingEnabled="false"
                    android:paddingTop="12dp"
                    android:paddingBottom="8dp"
                    tools:itemCount="5"
                    tools:listitem="@layout/item_review" />

                <!-- Enhanced Empty State -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_empty_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="40dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="?attr/colorSurfaceContainerLowest"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="1dp"
                    app:strokeColor="?attr/colorOutlineVariant"
                    app:strokeWidth="1dp"
                    tools:visibility="visible">

                    <LinearLayout
                        android:id="@+id/layout_empty_state"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="40dp"
                        android:animateLayoutChanges="true">

                        <!-- Enhanced Empty Illustration -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="140dp"
                            android:layout_height="140dp"
                            android:layout_marginBottom="28dp"
                            app:cardBackgroundColor="?attr/colorPrimaryContainer"
                            app:cardCornerRadius="70dp"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/iv_empty_illustration"
                                android:layout_width="80dp"
                                android:layout_height="80dp"
                                android:layout_gravity="center"
                                android:contentDescription="@string/no_reviews_illustration"
                                android:src="@drawable/ic_reviews_empty"
                                android:scaleType="centerInside"
                                app:tint="?attr/colorOnPrimaryContainer" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:id="@+id/tv_empty_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="12dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="No Reviews Yet"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="24sp"
                            android:textStyle="bold"
                            android:letterSpacing="-0.01" />

                        <TextView
                            android:id="@+id/tv_empty_message"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="32dp"
                            android:fontFamily="@font/roboto_regular"
                            android:gravity="center"
                            android:text="Be the first to share your feedback!\nYour review helps others make better choices."
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="16sp"
                            android:lineSpacingExtra="2dp"
                            android:letterSpacing="0.01" />

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_write_first_review"
                            style="@style/Widget.Material3.Button.UnelevatedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Write First Review"
                            android:textSize="15sp"
                            app:icon="@drawable/ic_edit"
                            app:iconGravity="start"
                            app:iconSize="20dp"
                            app:cornerRadius="16dp" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

                <!-- Enhanced Loading State -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/card_loading_state"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="20dp"
                    android:layout_marginTop="40dp"
                    android:visibility="gone"
                    app:cardBackgroundColor="?attr/colorSurfaceContainerLowest"
                    app:cardCornerRadius="20dp"
                    app:cardElevation="1dp"
                    app:strokeColor="?attr/colorOutlineVariant"
                    app:strokeWidth="1dp">

                    <LinearLayout
                        android:id="@+id/layout_loading"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="48dp"
                        android:animateLayoutChanges="true">

                        <!-- Enhanced Loading Indicator -->
                        <com.google.android.material.card.MaterialCardView
                            android:layout_width="100dp"
                            android:layout_height="100dp"
                            android:layout_marginBottom="24dp"
                            app:cardBackgroundColor="?attr/colorPrimaryContainer"
                            app:cardCornerRadius="50dp"
                            app:cardElevation="0dp">

                            <com.google.android.material.progressindicator.CircularProgressIndicator
                                android:id="@+id/progress_loading"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:layout_gravity="center"
                                android:indeterminate="true"
                                app:indicatorColor="?attr/colorPrimary"
                                app:trackColor="?attr/colorSurfaceVariant"
                                app:indicatorSize="60dp"
                                app:trackThickness="4dp" />

                        </com.google.android.material.card.MaterialCardView>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginBottom="8dp"
                            android:fontFamily="@font/roboto_bold"
                            android:text="Loading Reviews"
                            android:textColor="?attr/colorOnSurface"
                            android:textSize="18sp"
                            android:letterSpacing="0.01" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_regular"
                            android:text="Please wait while we fetch the latest reviews..."
                            android:textColor="?attr/colorOnSurfaceVariant"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:letterSpacing="0.01" />

                    </LinearLayout>

                </com.google.android.material.card.MaterialCardView>

            </LinearLayout>

        </androidx.core.widget.NestedScrollView>

    </androidx.swiperefreshlayout.widget.SwipeRefreshLayout>

    <!-- Enhanced Write Review FAB -->
    <com.google.android.material.floatingactionbutton.ExtendedFloatingActionButton
        android:id="@+id/fab_write_review"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_margin="20dp"
        android:text="Write Review"
        android:textSize="15sp"
        android:fontFamily="@font/roboto_bold"
        android:letterSpacing="0.01"
        app:icon="@drawable/ic_edit"
        app:iconSize="20dp"
        app:iconGravity="start"
        app:cornerRadius="28dp"
        app:elevation="6dp"
        app:hoveredFocusedTranslationZ="8dp"
        app:pressedTranslationZ="12dp"
        app:layout_behavior="com.google.android.material.behavior.HideBottomViewOnScrollBehavior"
        app:shrinkMotionSpec="@animator/fab_shrink"
        app:extendMotionSpec="@animator/fab_extend" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
