<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    tools:context=".activities.vendor.VendorDashboardActivity">

    <!-- Status Bar Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/primary_color" />

    <!-- Professional App Bar with Toolbar Icons -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_color"
            app:title="Vendor Dashboard"
            app:titleTextColor="@color/white"
            app:navigationIcon="@drawable/ic_menu"
            app:navigationIconTint="@color/white" />

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Dashboard Content -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Welcome Header Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/primary_color">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="20dp"
                    android:gravity="center_vertical">

                    <com.google.android.material.imageview.ShapeableImageView
                        android:id="@+id/vendorAvatar"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_marginEnd="16dp"
                        android:src="@drawable/ic_vendor_placeholder"
                        android:scaleType="centerCrop"
                        app:shapeAppearanceOverlay="@style/CircularImageView" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/vendorName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Welcome, Vendor!"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_bold" />

                        <TextView
                            android:id="@+id/vendorLocation"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Location: Not Set"
                            android:textColor="@color/white"
                            android:textSize="14sp"
                            android:alpha="0.9"
                            android:fontFamily="@font/roboto_regular" />

                    </LinearLayout>

                    <!-- Vendor Status Toggle -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <com.google.android.material.switchmaterial.SwitchMaterial
                            android:id="@+id/vendorStatusSwitch"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:checked="false"
                            app:thumbTint="@color/white"
                            app:trackTint="@color/white"
                            app:trackTintMode="src_atop" />

                        <TextView
                            android:id="@+id/vendorStatusText"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="Offline"
                            android:textColor="@color/white"
                            android:textSize="12sp"
                            android:fontFamily="@font/roboto_medium" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Today's Orders Summary Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_orders"
                            app:tint="@color/primary_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Today's Orders"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_bold" />

                        <TextView
                            android:id="@+id/viewAllOrders"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="View All"
                            android:textColor="@color/primary_color"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto_medium"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="8dp" />

                    </LinearLayout>

                    <!-- Orders Statistics -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <!-- Total Orders -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="@drawable/rounded_background_light">

                            <TextView
                                android:id="@+id/totalOrdersCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/primary_color"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Total Orders"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Pending Orders -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/rounded_background_warning">

                            <TextView
                                android:id="@+id/pendingOrdersCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/warning_color"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Pending"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center" />

                        </LinearLayout>

                        <!-- Completed Orders -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp"
                            android:background="@drawable/rounded_background_success">

                            <TextView
                                android:id="@+id/completedOrdersCount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="0"
                                android:textColor="@color/success_color"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Completed"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="center" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Earnings Overview Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_earnings"
                            app:tint="@color/success_color" />

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Earnings Overview"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_bold" />

                        <TextView
                            android:id="@+id/viewEarningsDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Details"
                            android:textColor="@color/success_color"
                            android:textSize="14sp"
                            android:fontFamily="@font/roboto_medium"
                            android:clickable="true"
                            android:focusable="true"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:padding="8dp" />

                    </LinearLayout>

                    <!-- Earnings Statistics -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <!-- Today's Earnings -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/todayEarnings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹0"
                                android:textColor="@color/success_color"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="Today"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="@font/roboto_regular" />

                        </LinearLayout>

                        <!-- Weekly Earnings -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/weeklyEarnings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹0"
                                android:textColor="@color/success_color"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="This Week"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="@font/roboto_regular" />

                        </LinearLayout>

                        <!-- Monthly Earnings -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="12dp">

                            <TextView
                                android:id="@+id/monthlyEarnings"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="₹0"
                                android:textColor="@color/success_color"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                android:fontFamily="@font/roboto_bold" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:text="This Month"
                                android:textColor="@color/text_secondary"
                                android:textSize="12sp"
                                android:fontFamily="@font/roboto_regular" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Quick Action Buttons Card -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                app:cardCornerRadius="12dp"
                app:cardElevation="4dp"
                app:cardBackgroundColor="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <!-- Card Header -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="16dp">

                        <ImageView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:src="@drawable/ic_quick_actions"
                            app:tint="@color/primary_color" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Quick Actions"
                            android:textColor="@color/text_primary"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:fontFamily="@font/roboto_bold" />

                    </LinearLayout>

                    <!-- Action Buttons Grid -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <!-- First Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2"
                            android:layout_marginBottom="12dp">

                            <!-- Add New Food Item -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnAddFoodItem"
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:text="Add Food Item"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:fontFamily="@font/roboto_medium"
                                app:backgroundTint="@color/primary_color"
                                app:cornerRadius="8dp"
                                app:icon="@drawable/ic_add_food"
                                app:iconTint="@color/white"
                                app:iconGravity="textStart"
                                style="@style/Widget.Material3.Button" />

                            <!-- View Order History -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnOrderHistory"
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="Order History"
                                android:textColor="@color/primary_color"
                                android:textSize="14sp"
                                android:fontFamily="@font/roboto_medium"
                                app:backgroundTint="@color/white"
                                app:strokeColor="@color/primary_color"
                                app:strokeWidth="1dp"
                                app:cornerRadius="8dp"
                                app:icon="@drawable/ic_history"
                                app:iconTint="@color/primary_color"
                                app:iconGravity="textStart"
                                style="@style/Widget.Material3.Button.OutlinedButton" />

                        </LinearLayout>

                        <!-- Second Row -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:weightSum="2">

                            <!-- Manage Menu -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnManageMenu"
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_weight="1"
                                android:layout_marginEnd="8dp"
                                android:text="Manage Menu"
                                android:textColor="@color/primary_color"
                                android:textSize="14sp"
                                android:fontFamily="@font/roboto_medium"
                                app:backgroundTint="@color/white"
                                app:strokeColor="@color/primary_color"
                                app:strokeWidth="1dp"
                                app:cornerRadius="8dp"
                                app:icon="@drawable/ic_menu_management"
                                app:iconTint="@color/primary_color"
                                app:iconGravity="textStart"
                                style="@style/Widget.Material3.Button.OutlinedButton" />

                            <!-- Start Messaging -->
                            <com.google.android.material.button.MaterialButton
                                android:id="@+id/btnStartMessaging"
                                android:layout_width="0dp"
                                android:layout_height="56dp"
                                android:layout_weight="1"
                                android:layout_marginStart="8dp"
                                android:text="Customer Chat"
                                android:textColor="@color/white"
                                android:textSize="14sp"
                                android:fontFamily="@font/roboto_medium"
                                app:backgroundTint="@color/success_color"
                                app:cornerRadius="8dp"
                                app:icon="@drawable/ic_chat"
                                app:iconTint="@color/white"
                                app:iconGravity="textStart"
                                style="@style/Widget.Material3.Button" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
