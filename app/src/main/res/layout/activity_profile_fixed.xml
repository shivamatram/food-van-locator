<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/colorSurface"
    android:fitsSystemWindows="true"
    tools:context=".activities.customer.ProfileActivity">

    <!-- Enhanced App Bar Layout with Material Design 3 -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/app_bar_layout"
        android:layout_width="match_parent"
        android:layout_height="360dp"
        android:background="@android:color/transparent"
        android:fitsSystemWindows="true"
        android:theme="@style/ThemeOverlay.Material3.Dark">

        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/primary_red"
            app:expandedTitleGravity="bottom|start"
            app:expandedTitleMarginBottom="28dp"
            app:expandedTitleMarginStart="24dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed|snap"
            app:statusBarScrim="@color/primary_red"
            app:title="@string/profile_title"
            app:titleCollapseMode="scale">

            <!-- Enhanced Header Background with Gradient -->
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/profile_header_gradient_enhanced"
                android:fitsSystemWindows="true"
                android:padding="24dp"
                app:layout_collapseMode="parallax"
                app:layout_collapseParallaxMultiplier="0.7">

                <!-- Profile Picture Container with Enhanced Styling -->
                <com.google.android.material.card.MaterialCardView
                    android:id="@+id/profile_picture_container"
                    android:layout_width="140dp"
                    android:layout_height="140dp"
                    android:layout_marginTop="32dp"
                    app:cardCornerRadius="70dp"
                    app:cardElevation="12dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:strokeColor="@android:color/white"
                    app:strokeWidth="4dp">

                    <ImageView
                        android:id="@+id/iv_profile_picture"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:contentDescription="@string/profile_picture_desc"
                        android:scaleType="centerCrop"
                        android:src="@drawable/ic_person_placeholder"
                        tools:src="@tools:sample/avatars" />

                    <!-- Enhanced Edit Profile Picture FAB -->
                    <com.google.android.material.floatingactionbutton.FloatingActionButton
                        android:id="@+id/fab_edit_picture"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom|end"
                        android:layout_margin="8dp"
                        android:contentDescription="@string/edit_profile_picture"
                        app:backgroundTint="@color/primary_red"
                        app:fabSize="mini"
                        app:srcCompat="@drawable/ic_camera_enhanced"
                        app:tint="@android:color/white" />

                </com.google.android.material.card.MaterialCardView>

                <!-- User Name with Enhanced Typography -->
                <TextView
                    android:id="@+id/tv_user_name"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="sans-serif-medium"
                    android:gravity="center"
                    android:letterSpacing="0.01"
                    android:shadowColor="#40000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="@string/default_user_name"
                    android:textColor="@android:color/white"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/profile_picture_container"
                    tools:text="SHIVAM ATRAM" />

                <!-- User Email with Enhanced Styling -->
                <TextView
                    android:id="@+id/tv_user_email"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="sans-serif"
                    android:gravity="center"
                    android:letterSpacing="0.02"
                    android:shadowColor="#40000000"
                    android:shadowDx="1"
                    android:shadowDy="1"
                    android:shadowRadius="2"
                    android:text="@string/default_user_email"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/tv_user_name"
                    tools:text="shivamatram2002@gmail.com" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <!-- Enhanced Toolbar with Material Design 3 -->
            <com.google.android.material.appbar.MaterialToolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@android:color/transparent"
                app:layout_collapseMode="pin"
                app:navigationIcon="@drawable/ic_arrow_back_white"
                app:navigationIconTint="@android:color/white"
                app:title="@string/profile_title"
                app:titleTextColor="@android:color/white" />

        </com.google.android.material.appbar.CollapsingToolbarLayout>

    </com.google.android.material.appbar.AppBarLayout>

    <!-- Enhanced Main Content with Material Design 3 -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nested_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clipToPadding="false"
        android:fillViewport="true"
        android:overScrollMode="never"
        android:scrollbars="none"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingHorizontal="20dp"
            android:paddingTop="24dp"
            android:paddingBottom="32dp">

            <!-- Enhanced User Stats Card - Fixes Order Points & Membership Visibility -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_user_stats"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="6dp"
                app:rippleColor="@color/primary_red"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- Stats Title -->
                    <TextView
                        android:id="@+id/tv_stats_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/user_statistics"
                        android:textColor="@color/text_primary"
                        android:textSize="20sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Stats Container -->
                    <LinearLayout
                        android:id="@+id/stats_container"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:baselineAligned="false"
                        android:orientation="horizontal"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_stats_title">

                        <!-- Total Orders Stat -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/stat_item_background"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginBottom="8dp"
                                android:contentDescription="@string/orders_icon"
                                android:src="@drawable/ic_fastfood"
                                app:tint="@color/primary_red" />

                            <TextView
                                android:id="@+id/tv_total_orders"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-black"
                                android:text="@string/default_orders_count"
                                android:textColor="@color/text_primary"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                tools:text="0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="sans-serif"
                                android:letterSpacing="0.02"
                                android:text="@string/orders_label"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <!-- Loyalty Points Stat -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="12dp"
                            android:layout_weight="1"
                            android:background="@drawable/stat_item_background"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginBottom="8dp"
                                android:contentDescription="@string/points_icon"
                                android:src="@drawable/ic_star"
                                app:tint="@color/primary_red" />

                            <TextView
                                android:id="@+id/tv_loyalty_points"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-black"
                                android:text="@string/default_points_count"
                                android:textColor="@color/text_primary"
                                android:textSize="28sp"
                                android:textStyle="bold"
                                tools:text="0" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="sans-serif"
                                android:letterSpacing="0.02"
                                android:text="@string/points_label"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp" />

                        </LinearLayout>

                        <!-- Membership Level Stat -->
                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/stat_item_background"
                            android:gravity="center"
                            android:orientation="vertical"
                            android:padding="16dp">

                            <ImageView
                                android:layout_width="32dp"
                                android:layout_height="32dp"
                                android:layout_marginBottom="8dp"
                                android:contentDescription="@string/membership_icon"
                                android:src="@drawable/ic_person"
                                app:tint="@color/primary_red" />

                            <TextView
                                android:id="@+id/tv_membership_level"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:fontFamily="sans-serif-black"
                                android:text="@string/default_membership_level"
                                android:textColor="@color/text_primary"
                                android:textSize="20sp"
                                android:textStyle="bold"
                                tools:text="Bronze" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="4dp"
                                android:fontFamily="sans-serif"
                                android:letterSpacing="0.02"
                                android:text="@string/member_label"
                                android:textColor="@color/text_secondary"
                                android:textSize="14sp" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Enhanced Profile Completion Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card_profile_completion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="@android:color/white"
                app:cardCornerRadius="20dp"
                app:cardElevation="4dp"
                app:rippleColor="@color/primary_red"
                app:strokeColor="#E0E0E0"
                app:strokeWidth="1dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- Profile Completion Icon -->
                    <ImageView
                        android:id="@+id/iv_completion_icon"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:contentDescription="@string/profile_completion_icon"
                        android:src="@drawable/ic_checklist"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        app:tint="@color/primary_red" />

                    <!-- Profile Completion Title -->
                    <TextView
                        android:id="@+id/tv_completion_title"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:fontFamily="sans-serif-medium"
                        android:text="@string/profile_completion_title"
                        android:textColor="@color/text_primary"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toStartOf="@id/tv_completion_percentage"
                        app:layout_constraintStart_toEndOf="@id/iv_completion_icon"
                        app:layout_constraintTop_toTopOf="@id/iv_completion_icon" />

                    <!-- Profile Completion Percentage -->
                    <TextView
                        android:id="@+id/tv_completion_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/percentage_badge_background"
                        android:fontFamily="sans-serif-black"
                        android:paddingHorizontal="12dp"
                        android:paddingVertical="6dp"
                        android:text="@string/default_completion_percentage"
                        android:textColor="@android:color/white"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/iv_completion_icon"
                        tools:text="25%" />

                    <!-- Profile Completion Subtitle -->
                    <TextView
                        android:id="@+id/tv_completion_subtitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="4dp"
                        android:fontFamily="sans-serif"
                        android:text="@string/profile_completion_subtitle"
                        android:textColor="@color/text_secondary"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/iv_completion_icon"
                        app:layout_constraintTop_toBottomOf="@id/tv_completion_title" />

                    <!-- Enhanced Progress Indicator -->
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progress_completion"
                        android:layout_width="0dp"
                        android:layout_height="8dp"
                        android:layout_marginTop="16dp"
                        android:progress="25"
                        app:indicatorColor="@color/primary_red"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_completion_subtitle"
                        app:trackColor="#E0E0E0"
                        app:trackCornerRadius="4dp" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
