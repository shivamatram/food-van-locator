<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background_primary"
    android:fitsSystemWindows="false"
    tools:context=".activities.vendor.ImportExportActivity">

    <!-- Status Bar Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:background="@color/primary_color" />

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:elevation="4dp"
        app:title="Import / Export"
        app:titleTextColor="@color/white"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/white" />

    <!-- Tab Layout -->
    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/primary_color"
        app:tabTextColor="@color/white_80"
        app:tabSelectedTextColor="@color/white"
        app:tabIndicatorColor="@color/white"
        app:tabMode="fixed" />

    <!-- ViewPager -->
    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Content (when not using tabs) -->
    <androidx.core.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:padding="@dimen/spacing_normal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Import Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_large"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Import Menu Items"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Upload CSV or Excel file to import menu items in bulk"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="@dimen/spacing_normal" />

                    <!-- Upload Area -->
                    <com.google.android.material.card.MaterialCardView
                        android:id="@+id/card_upload_area"
                        android:layout_width="match_parent"
                        android:layout_height="120dp"
                        android:layout_marginBottom="@dimen/spacing_normal"
                        app:cardCornerRadius="@dimen/card_corner_radius"
                        app:cardElevation="0dp"
                        app:strokeWidth="2dp"
                        app:strokeColor="@color/primary_color"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:padding="@dimen/spacing_normal">

                            <ImageView
                                android:layout_width="48dp"
                                android:layout_height="48dp"
                                android:src="@drawable/ic_add"
                                app:tint="@color/primary_color"
                                android:layout_marginBottom="@dimen/spacing_small" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Click to select file"
                                android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                                android:textColor="@color/primary_color" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="CSV, XLS, XLSX supported"
                                android:textAppearance="@style/TextAppearance.Material3.LabelSmall"
                                android:textColor="?attr/colorOnSurfaceVariant" />

                        </LinearLayout>

                    </com.google.android.material.card.MaterialCardView>

                    <!-- File Selection -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginBottom="@dimen/spacing_normal">

                        <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:hint="Selected file"
                            android:layout_marginEnd="@dimen/spacing_small"
                            style="@style/Widget.Material3.TextInputLayout.OutlinedBox">

                            <com.google.android.material.textfield.TextInputEditText
                                android:id="@+id/et_file_name"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:enabled="false"
                                android:maxLines="1" />

                        </com.google.android.material.textfield.TextInputLayout>

                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btn_select_file"
                            style="@style/Widget.Material3.Button.OutlinedButton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Browse"
                            app:strokeColor="@color/primary_color"
                            android:textColor="@color/primary_color" />

                    </LinearLayout>

                    <!-- Format Selection -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="File Format"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_format"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="@dimen/spacing_small"
                        app:singleSelection="true"
                        android:layout_marginBottom="@dimen/spacing_normal">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_csv"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CSV"
                            android:checked="true" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_excel"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Excel" />

                    </com.google.android.material.chip.ChipGroup>

                    <!-- Template Download -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_download_template"
                        style="@style/Widget.Material3.Button.TextButton"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Download Template"
                        android:textColor="@color/primary_color"
                        android:layout_marginBottom="@dimen/spacing_normal" />

                    <!-- Import Progress -->
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progress_import"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:indicatorColor="@color/primary_color"
                        android:layout_marginBottom="@dimen/spacing_normal" />

                    <!-- Import Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_import"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Import Items"
                        app:backgroundTint="@color/primary_color" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Export Section -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="4dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Export Menu Items"
                        android:textAppearance="@style/TextAppearance.Material3.HeadlineSmall"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Export your menu items for backup or offline editing"
                        android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                        android:textColor="?attr/colorOnSurfaceVariant"
                        android:layout_marginBottom="@dimen/spacing_normal" />

                    <!-- Export Type -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Export Type"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_export_type"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="@dimen/spacing_small"
                        app:singleSelection="true"
                        android:layout_marginBottom="@dimen/spacing_normal">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_export_all"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="All Items"
                            android:checked="true" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_export_filtered"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Filtered Items" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_export_selected"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Selected Items" />

                    </com.google.android.material.chip.ChipGroup>

                    <!-- Export Format -->
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Export Format"
                        android:textAppearance="@style/TextAppearance.Material3.LabelLarge"
                        android:textColor="?attr/colorOnSurface"
                        android:layout_marginBottom="@dimen/spacing_small" />

                    <com.google.android.material.chip.ChipGroup
                        android:id="@+id/chip_group_export_format"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:chipSpacingHorizontal="@dimen/spacing_small"
                        app:singleSelection="true"
                        android:layout_marginBottom="@dimen/spacing_normal">

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_format_csv"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="CSV"
                            android:checked="true" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_format_excel"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Excel" />

                        <com.google.android.material.chip.Chip
                            android:id="@+id/chip_format_json"
                            style="@style/Widget.Material3.Chip.Filter"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="JSON" />

                    </com.google.android.material.chip.ChipGroup>

                    <!-- Export Progress -->
                    <com.google.android.material.progressindicator.LinearProgressIndicator
                        android:id="@+id/progress_export"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="gone"
                        app:indicatorColor="@color/primary_color"
                        android:layout_marginBottom="@dimen/spacing_normal" />

                    <!-- Export Button -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_export"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Export Items"
                        app:backgroundTint="@color/primary_color" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
