<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/spacing_small"
    android:clickable="true"
    android:focusable="true"
    app:cardCornerRadius="@dimen/corner_radius_small"
    app:cardElevation="0dp"
    app:strokeColor="@color/gray_200"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/spacing_normal">

        <!-- Header Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvTicketId"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="#ABC12345"
                android:textColor="@color/primary_color"
                android:textSize="@dimen/text_size_normal"
                android:textStyle="bold" />

            <!-- Status Chip -->
            <com.google.android.material.chip.Chip
                android:id="@+id/chipStatus"
                style="@style/Widget.Material3.Chip.Assist"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:clickable="false"
                android:text="Open"
                android:textSize="12sp"
                app:chipMinHeight="24dp" />

        </LinearLayout>

        <!-- Category Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_tiny"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:contentDescription="Category"
                android:src="@drawable/ic_category"
                app:tint="@color/text_secondary" />

            <TextView
                android:id="@+id/tvCategory"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_tiny"
                android:text="Payment Issue"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_small" />

        </LinearLayout>

        <!-- Description Preview -->
        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:ellipsize="end"
            android:maxLines="2"
            android:text="I was charged twice for my order..."
            android:textColor="@color/text_primary"
            android:textSize="@dimen/text_size_small" />

        <!-- Footer Row -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spacing_small"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:contentDescription="Created"
                android:src="@drawable/ic_schedule"
                app:tint="@color/text_hint" />

            <TextView
                android:id="@+id/tvCreatedAt"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/spacing_tiny"
                android:layout_weight="1"
                android:text="Dec 05, 2024 10:30 AM"
                android:textColor="@color/text_hint"
                android:textSize="@dimen/text_size_small" />

            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:contentDescription="Arrow"
                android:src="@drawable/ic_chevron_right"
                app:tint="@color/text_secondary" />

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
