<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="12dp"
    app:cardElevation="2dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="16dp">

        <!-- Item Details -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_marginEnd="16dp">

            <!-- Badges Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <ImageView
                    android:id="@+id/iv_veg_indicator"
                    android:layout_width="16dp"
                    android:layout_height="16dp"
                    android:src="@drawable/ic_veg"
                    android:layout_marginEnd="8dp"
                    android:contentDescription="Veg/Non-Veg Indicator" />

                <TextView
                    android:id="@+id/tv_best_seller"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BESTSELLER"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/badge_bestseller"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:layout_marginEnd="4dp"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_new"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="NEW"
                    android:textSize="10sp"
                    android:textStyle="bold"
                    android:textColor="@color/white"
                    android:background="@drawable/badge_new"
                    android:paddingHorizontal="6dp"
                    android:paddingVertical="2dp"
                    android:visibility="gone" />

            </LinearLayout>

            <!-- Item Name -->
            <TextView
                android:id="@+id/tv_item_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Delicious Food Item"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/text_primary"
                android:layout_marginBottom="4dp" />

            <!-- Item Description -->
            <TextView
                android:id="@+id/tv_item_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Fresh ingredients with amazing taste"
                android:textSize="14sp"
                android:textColor="@color/text_secondary"
                android:maxLines="2"
                android:ellipsize="end"
                android:layout_marginBottom="8dp" />

            <!-- Price Row -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginBottom="4dp">

                <TextView
                    android:id="@+id/tv_item_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹120"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:textColor="@color/text_primary" />

                <TextView
                    android:id="@+id/tv_original_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="₹150"
                    android:textSize="14sp"
                    android:textColor="@color/text_secondary"
                    android:layout_marginStart="8dp"
                    android:visibility="gone"
                    android:background="@drawable/strikethrough" />

            </LinearLayout>

            <!-- Rating and Prep Time -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:id="@+id/tv_rating"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4.5 ★"
                    android:textSize="12sp"
                    android:textColor="@color/accent_color"
                    android:visibility="gone" />

                <View
                    android:layout_width="4dp"
                    android:layout_height="4dp"
                    android:layout_marginHorizontal="6dp"
                    android:background="@drawable/circle_shape"
                    android:backgroundTint="@color/gray_400"
                    android:visibility="gone" />

                <TextView
                    android:id="@+id/tv_preparation_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="15 mins"
                    android:textSize="12sp"
                    android:textColor="@color/text_secondary" />

            </LinearLayout>

        </LinearLayout>

        <!-- Item Image and Add Button -->
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Item Image -->
            <ImageView
                android:id="@+id/iv_item_image"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:scaleType="centerCrop"
                android:src="@drawable/placeholder_food_item"
                android:background="@drawable/rounded_image_background"
                android:layout_marginBottom="8dp"
                android:contentDescription="Food Item Image" />

            <!-- Add to Cart Button -->
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btn_add_to_cart"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:text="ADD"
                android:textSize="12sp"
                android:textStyle="bold"
                app:backgroundTint="@color/primary_color"
                app:cornerRadius="16dp"
                android:paddingHorizontal="16dp"
                android:minWidth="60dp" />

            <!-- Quantity Controls -->
            <LinearLayout
                android:id="@+id/quantity_controls"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:background="@drawable/quantity_control_background"
                android:visibility="gone">

                <com.google.android.material.button.MaterialButton
                    android:id="@+id/btn_remove_from_cart"
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="−"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@android:color/transparent"
                    android:textColor="@color/primary_color"
                    app:strokeWidth="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp" />

                <TextView
                    android:id="@+id/tv_quantity"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_color"
                    android:minWidth="24dp"
                    android:gravity="center" />

                <com.google.android.material.button.MaterialButton
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:text="+"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    app:backgroundTint="@android:color/transparent"
                    android:textColor="@color/primary_color"
                    app:strokeWidth="0dp"
                    android:insetTop="0dp"
                    android:insetBottom="0dp"
                    android:minWidth="0dp"
                    android:minHeight="0dp"
                    android:onClick="@{() -> listener.onAddToCart(item)}" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
