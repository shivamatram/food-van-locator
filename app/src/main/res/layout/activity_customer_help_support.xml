<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_primary"
    android:orientation="vertical">

    <!-- Status Bar Spacer -->
    <View
        android:id="@+id/statusBarSpacer"
        android:layout_width="match_parent"
        android:layout_height="@dimen/status_bar_height"
        android:background="@color/primary_color" />

    <!-- Toolbar -->
    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        android:elevation="@dimen/toolbar_elevation"
        app:navigationIcon="@drawable/ic_arrow_back"
        app:navigationIconTint="@color/white"
        app:title="Help &amp; Support"
        app:titleTextColor="@color/white" />

    <!-- Main Content -->
    <androidx.core.widget.NestedScrollView
        android:id="@+id/nestedScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/spacing_normal">

            <!-- Header Section -->
            <TextView
                android:id="@+id/tvSubtitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:text="How can we help you today?"
                android:textColor="@color/text_secondary"
                android:textSize="@dimen/text_size_medium" />

            <!-- Quick Help Actions Grid -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardQuickActions"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:text="Quick Actions"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold" />

                    <!-- Quick Actions Row 1 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!-- FAQs Action -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardFaqAction"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_tiny"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="@dimen/corner_radius_small"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/gray_200"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/spacing_normal">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:contentDescription="FAQs"
                                    android:src="@drawable/ic_help_outline"
                                    app:tint="@color/primary_color" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/spacing_tiny"
                                    android:text="FAQs"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/text_size_normal" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Report Issue Action -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardReportAction"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_tiny"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="@dimen/corner_radius_small"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/gray_200"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/spacing_normal">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:contentDescription="Report Issue"
                                    android:src="@drawable/ic_report_problem"
                                    app:tint="@color/error_color" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/spacing_tiny"
                                    android:text="Report Issue"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/text_size_normal" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                    <!-- Quick Actions Row 2 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <!-- Order Help Action -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardOrderHelpAction"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_tiny"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="@dimen/corner_radius_small"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/gray_200"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/spacing_normal">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:contentDescription="Order Help"
                                    android:src="@drawable/ic_receipt"
                                    app:tint="@color/info_color" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/spacing_tiny"
                                    android:text="Order Help"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/text_size_normal" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                        <!-- Contact Support Action -->
                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/cardContactAction"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_tiny"
                            android:layout_weight="1"
                            android:clickable="true"
                            android:focusable="true"
                            app:cardCornerRadius="@dimen/corner_radius_small"
                            app:cardElevation="0dp"
                            app:strokeColor="@color/gray_200"
                            app:strokeWidth="1dp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center"
                                android:orientation="vertical"
                                android:padding="@dimen/spacing_normal">

                                <ImageView
                                    android:layout_width="32dp"
                                    android:layout_height="32dp"
                                    android:contentDescription="Contact Support"
                                    android:src="@drawable/ic_chat"
                                    app:tint="@color/success_color" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginTop="@dimen/spacing_tiny"
                                    android:text="Contact Us"
                                    android:textColor="@color/text_primary"
                                    android:textSize="@dimen/text_size_normal" />

                            </LinearLayout>

                        </com.google.android.material.card.MaterialCardView>

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Contact Support Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardContactSupport"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:text="Contact Support"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_large"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tvWorkingHours"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_normal"
                        android:text="Working Hours: 9:00 AM - 9:00 PM"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_small" />

                    <!-- Contact Buttons -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="3">

                        <!-- Email Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnEmail"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="@dimen/spacing_tiny"
                            android:layout_weight="1"
                            android:minHeight="48dp"
                            android:text="Email"
                            android:textSize="12sp"
                            app:icon="@drawable/ic_email"
                            app:iconGravity="top"
                            app:iconPadding="4dp"
                            app:iconSize="24dp" />

                        <!-- WhatsApp Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnWhatsapp"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginHorizontal="@dimen/spacing_tiny"
                            android:layout_weight="1"
                            android:minHeight="48dp"
                            android:text="WhatsApp"
                            android:textSize="12sp"
                            app:backgroundTint="@color/success_light"
                            app:icon="@drawable/ic_whatsapp"
                            app:iconGravity="top"
                            app:iconPadding="4dp"
                            app:iconSize="24dp"
                            app:iconTint="@color/success_color" />

                        <!-- Call Button -->
                        <com.google.android.material.button.MaterialButton
                            android:id="@+id/btnCall"
                            style="@style/Widget.Material3.Button.TonalButton"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/spacing_tiny"
                            android:layout_weight="1"
                            android:minHeight="48dp"
                            android:text="Call"
                            android:textSize="12sp"
                            app:backgroundTint="@color/info_light"
                            app:icon="@drawable/ic_call"
                            app:iconGravity="top"
                            app:iconPadding="4dp"
                            app:iconSize="24dp"
                            app:iconTint="@color/info_color" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- FAQ Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardFaqs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Frequently Asked Questions"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold" />

                        <ProgressBar
                            android:id="@+id/progressFaqs"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <!-- FAQ List -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvFaqs"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="5" />

                    <!-- FAQ Empty State -->
                    <TextView
                        android:id="@+id/tvFaqEmpty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/spacing_large"
                        android:text="Help content will be available soon."
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_normal"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Recent Orders Section (for Order Help) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardRecentOrders"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_normal"
                android:visibility="gone"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Recent Orders"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/ivCloseOrders"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:clickable="true"
                            android:contentDescription="Close"
                            android:focusable="true"
                            android:src="@drawable/ic_close"
                            app:tint="@color/text_secondary" />

                    </LinearLayout>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:text="Select an order to report an issue"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_small" />

                    <!-- Recent Orders List -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvRecentOrders"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="3" />

                    <!-- Orders Empty State -->
                    <TextView
                        android:id="@+id/tvOrdersEmpty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="@dimen/spacing_large"
                        android:text="No recent orders found"
                        android:textColor="@color/text_secondary"
                        android:textSize="@dimen/text_size_normal"
                        android:visibility="gone" />

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- Support Tickets Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardTickets"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_normal"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="2dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="My Support Tickets"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_large"
                            android:textStyle="bold" />

                        <ProgressBar
                            android:id="@+id/progressTickets"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:visibility="gone" />

                    </LinearLayout>

                    <!-- Tickets List -->
                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rvTickets"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="false"
                        tools:itemCount="2" />

                    <!-- Tickets Empty State -->
                    <LinearLayout
                        android:id="@+id/layoutTicketsEmpty"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:padding="@dimen/spacing_large"
                        android:visibility="gone">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:contentDescription="No tickets"
                            android:src="@drawable/ic_checklist"
                            app:tint="@color/gray_400" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_small"
                            android:text="No support tickets yet"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_normal" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/spacing_tiny"
                            android:text="Need help? Report an issue above"
                            android:textColor="@color/text_hint"
                            android:textSize="@dimen/text_size_small" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

            <!-- System Info Section -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSystemInfo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/spacing_large"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="1dp"
                app:strokeWidth="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/spacing_normal">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_small"
                        android:text="App Information"
                        android:textColor="@color/text_primary"
                        android:textSize="@dimen/text_size_medium"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_tiny"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="App Version"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_small" />

                        <TextView
                            android:id="@+id/tvAppVersion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.0.0"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_small" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/spacing_tiny"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Device"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_small" />

                        <TextView
                            android:id="@+id/tvDeviceModel"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Android Device"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_small" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="OS Version"
                            android:textColor="@color/text_secondary"
                            android:textSize="@dimen/text_size_small" />

                        <TextView
                            android:id="@+id/tvOsVersion"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Android 14"
                            android:textColor="@color/text_primary"
                            android:textSize="@dimen/text_size_small" />

                    </LinearLayout>

                </LinearLayout>

            </com.google.android.material.card.MaterialCardView>

        </LinearLayout>

    </androidx.core.widget.NestedScrollView>

</LinearLayout>
