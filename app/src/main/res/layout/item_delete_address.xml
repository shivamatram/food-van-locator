<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardBackgroundColor="?attr/colorSurfaceContainerLow"
    app:cardCornerRadius="16dp"
    app:cardElevation="2dp"
    app:strokeColor="?attr/colorOutlineVariant"
    app:strokeWidth="1dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackground">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Address Type Icon -->
        <com.google.android.material.card.MaterialCardView
            android:id="@+id/icon_container"
            android:layout_width="48dp"
            android:layout_height="48dp"
            app:cardBackgroundColor="?attr/colorSecondaryContainer"
            app:cardCornerRadius="12dp"
            app:cardElevation="0dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_address_type_icon"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center"
                android:src="@drawable/ic_location_on"
                app:tint="?attr/colorOnSecondaryContainer" />

        </com.google.android.material.card.MaterialCardView>

        <!-- Address Info -->
        <LinearLayout
            android:id="@+id/address_info_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="12dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="@id/icon_container"
            app:layout_constraintEnd_toStartOf="@id/btn_delete"
            app:layout_constraintStart_toEndOf="@id/icon_container"
            app:layout_constraintTop_toTopOf="@id/icon_container">

            <TextView
                android:id="@+id/tv_address_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Business Location"
                android:textAppearance="@style/TextAppearance.Material3.BodyLarge"
                android:textColor="?attr/colorOnSurface"
                android:fontFamily="@font/roboto_bold"
                tools:text="Business Location" />

            <TextView
                android:id="@+id/tv_full_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="123 Food Street, Market Area, City - 123456"
                android:textAppearance="@style/TextAppearance.Material3.BodyMedium"
                android:textColor="?attr/colorOnSurfaceVariant"
                android:fontFamily="@font/roboto_regular"
                android:maxLines="2"
                android:ellipsize="end"
                tools:text="123 Food Street, Market Area, City - 123456" />

        </LinearLayout>

        <!-- Delete Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_delete"
            style="@style/Widget.Material3.Button.OutlinedButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Delete"
            android:textSize="12sp"
            android:minWidth="0dp"
            android:paddingHorizontal="16dp"
            app:cornerRadius="12dp"
            app:icon="@drawable/ic_delete"
            app:iconTint="?attr/colorError"
            android:textColor="?attr/colorError"
            app:strokeColor="?attr/colorError"
            app:layout_constraintBottom_toBottomOf="@id/icon_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/icon_container" />

        <!-- Primary Badge (shown when address is primary and cannot be deleted) -->
        <com.google.android.material.chip.Chip
            android:id="@+id/chip_primary_protected"
            style="@style/Widget.Material3.Chip.Assist"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Primary - Protected"
            android:textColor="@color/primary_color"
            app:chipBackgroundColor="?attr/colorSurfaceContainerLow"
            app:chipIcon="@drawable/ic_star_filled"
            app:chipIconTint="@color/primary_color"
            android:visibility="gone"
            app:layout_constraintBottom_toBottomOf="@id/icon_container"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/icon_container"
            tools:visibility="visible" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>
