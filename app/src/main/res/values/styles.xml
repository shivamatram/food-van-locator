<?xml version="1.0" encoding="utf-8"?>
<resources>
    
    <!-- Circle Image View Style -->
    <style name="CircleImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- Circular Image View Style (alias) -->
    <style name="CircularImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">50%</item>
    </style>
    
    <!-- Material Button Styles -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <style name="Widget.App.Button.TextButton" parent="Widget.Material3.Button.TextButton">
        <item name="android:textAllCaps">false</item>
    </style>
    
    <!-- Card Styles -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
    </style>
    
    <!-- Chip Styles -->
    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Assist">
        <item name="chipMinHeight">32dp</item>
        <item name="android:textSize">12sp</item>
    </style>
    
    <!-- Text Styles -->
    <style name="TextAppearance.App.Headline6" parent="TextAppearance.Material3.HeadlineSmall">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>
    
    <style name="TextAppearance.App.Body1" parent="TextAppearance.Material3.BodyLarge">
        <item name="android:textSize">16sp</item>
    </style>
    
    <style name="TextAppearance.App.Body2" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">14sp</item>
    </style>
    
    <style name="TextAppearance.App.Caption" parent="TextAppearance.Material3.BodySmall">
        <item name="android:textSize">12sp</item>
    </style>
    
    <!-- Toolbar Styles -->
    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">?attr/actionBarSize</item>
        <item name="android:background">@color/primary_color</item>
        <item name="android:elevation">4dp</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="navigationIconTint">@color/white</item>
        <item name="android:theme">@style/ThemeOverlay.Material3.Dark.ActionBar</item>
    </style>
    
    <!-- FAB Styles -->
    <style name="Widget.App.ExtendedFloatingActionButton" parent="Widget.Material3.ExtendedFloatingActionButton.Primary">
        <item name="backgroundTint">@color/primary_color</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <!-- Image View Styles -->
    <style name="RoundedCornerImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>
    
    <!-- Menu Management Styles -->
    <style name="Widget.App.MenuItemCard" parent="Widget.Material3.CardView.Elevated">
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="android:layout_margin">8dp</item>
    </style>
    
    <!-- Toggle Button Styles -->
    <style name="Widget.App.ToggleButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textAllCaps">false</item>
        <item name="cornerRadius">8dp</item>
    </style>
    
    <!-- Navigation Menu Text Appearance -->
    <style name="NavigationMenuTextAppearance" parent="TextAppearance.Material3.BodyMedium">
        <item name="android:textSize">@dimen/nav_item_text_size</item>
        <item name="android:textColor">@color/text_primary</item>
        <item name="android:fontFamily">sans-serif-medium</item>
        <item name="android:letterSpacing">0.01</item>
    </style>
    
    <!-- Navigation Menu Item Style -->
    <style name="NavigationMenuItem">
        <item name="android:layout_height">@dimen/nav_item_height</item>
        <item name="android:paddingStart">@dimen/nav_item_padding_horizontal</item>
        <item name="android:paddingEnd">@dimen/nav_item_padding_horizontal</item>
        <item name="android:paddingTop">@dimen/nav_item_padding_vertical</item>
        <item name="android:paddingBottom">@dimen/nav_item_padding_vertical</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:background">?attr/selectableItemBackground</item>
    </style>
    
    <!-- AppBarLayout Style -->
    <style name="Widget.App.AppBarLayout" parent="Widget.Material3.AppBarLayout">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/primary_color</item>
        <item name="android:elevation">4dp</item>
    </style>
    
    <!-- Overflow Menu Style with Black Text -->
    <style name="Widget.App.PopupMenu" parent="Widget.Material3.PopupMenu">
        <item name="android:textColor">@android:color/black</item>
        <item name="android:textColorPrimary">@android:color/black</item>
        <item name="android:textColorSecondary">@android:color/black</item>
    </style>

    <!-- DatePicker Theme with Orange Accent -->
    <style name="DatePickerTheme" parent="ThemeOverlay.Material3.MaterialAlertDialog.Centered">
        <item name="colorPrimary">@color/primary_color</item>
        <item name="colorAccent">@color/primary_color</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="android:headerBackground">@color/primary_color</item>
    </style>

</resources>
