<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_variant" />
            <corners android:radius="16dp" />
            <stroke
                android:width="2dp"
                android:color="@color/primary_red" />
        </shape>
    </item>
    
    <!-- Focused State -->
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_container_high" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/primary_red_alpha_50" />
        </shape>
    </item>
    
    <!-- Normal State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/surface_container" />
            <corners android:radius="16dp" />
            <stroke
                android:width="1dp"
                android:color="@color/colorOutlineVariant" />
        </shape>
    </item>
    
</selector>
